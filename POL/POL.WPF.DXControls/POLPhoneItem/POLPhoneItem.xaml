<UserControl x:Class="POL.WPF.DXControls.POLPhoneItem.POLPhoneItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border
        Name="bRoot"
        Padding="0"
        Margin="0"
        Background="Transparent"
        BorderThickness="2">

        <StackPanel Background="WhiteSmoke" Margin="0">
            <DockPanel Grid.Row="0" Name="dpHeader">
                <Grid DockPanel.Dock="Left">
                    <Border DockPanel.Dock="Left" Height="24" CornerRadius="5" Margin="3" Background="WhiteSmoke"
                            BorderThickness="1" BorderBrush="DimGray" Width="24" />
                    <TextBlock Name="tbLineNumber" VerticalAlignment="Center" HorizontalAlignment="Center"
                               Foreground="DimGray" FontSize="12" FontFamily="Tahoma" />
                </Grid>
                <Border Name="bLineDuration" DockPanel.Dock="Left" Height="24" MinWidth="70" CornerRadius="5"
                        Margin="3" BorderThickness="1" BorderBrush="DimGray">
                    <TextBlock Name="tbLineDuration" Margin="6,3" Foreground="DimGray" VerticalAlignment="Center"
                               HorizontalAlignment="Center" FontFamily="Tahoma" FontSize="12" />
                </Border>
                <Border Name="bLineName" DockPanel.Dock="Right" Height="24" CornerRadius="5" Margin="3"
                        Background="WhiteSmoke" BorderThickness="1" BorderBrush="DimGray">
                    <TextBlock Name="tbLineName" Margin="6,3" Foreground="DimGray" VerticalAlignment="Center"
                               FontFamily="Tahoma" FontSize="12" />
                </Border>
                <Grid />
            </DockPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Ellipse Name="eCallIn1" Grid.Row="0" Grid.Column="0" Margin="3" Width="8" Height="8" Fill="LightGreen"
                         Stroke="Green" StrokeThickness="1" />
                <TextBlock Name="tbCallInTitle" Grid.Row="0" Grid.Column="1" Margin="3" FontFamily="Tahoma"
                           FontSize="12" />
                <TextBlock Name="tbCallInTime" Grid.Row="0" Grid.Column="2" Margin="3" FontFamily="Tahoma"
                           FontSize="12" />

                <Ellipse Name="eCallIn2" Grid.Row="1" Grid.Column="0" Margin="3" Width="8" Height="8" Fill="LightGreen"
                         Stroke="Green" StrokeThickness="1" />
                <TextBlock Name="tbCallInPhone" Grid.Row="1" Grid.Column="1" Margin="3" FontFamily="Tahoma"
                           FontSize="12" FlowDirection="LeftToRight" HorizontalAlignment="Center" />
                <TextBlock Name="tbCallInDuration" Grid.Row="1" Grid.Column="2" Margin="3" FontFamily="Tahoma"
                           FontSize="12" />


                <Ellipse Name="eCallOut1" Grid.Row="2" Grid.Column="0" Margin="3" Width="8" Height="8" Fill="LightPink"
                         Stroke="Red" StrokeThickness="1" />
                <TextBlock Name="tbCallOutTitle" Grid.Row="2" Grid.Column="1" Margin="3" FontFamily="Tahoma"
                           FontSize="12" />
                <TextBlock Name="tbCallOutTime" Grid.Row="2" Grid.Column="2" Margin="3" FontFamily="Tahoma"
                           FontSize="12" />

                <Ellipse Name="eCallOut2" Grid.Row="3" Grid.Column="0" Margin="3" Width="8" Height="8" Fill="LightPink"
                         Stroke="Red" StrokeThickness="1" />
                <TextBlock Name="tbCallOutPhone" Grid.Row="3" Grid.Column="1" Margin="3" FontFamily="Tahoma"
                           FontSize="12" FlowDirection="LeftToRight" HorizontalAlignment="Center" />
                <TextBlock Name="tbCallOutDuration" Grid.Row="3" Grid.Column="2" Margin="3" FontFamily="Tahoma"
                           FontSize="12" />

                <Ellipse Name="eExtra" Grid.Row="4" Grid.Column="0" Margin="3" Width="8" Height="8" Fill="LightBlue"
                         Stroke="Blue" StrokeThickness="1" />
                <TextBlock Name="tbExtraTitle" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="3"
                           FontFamily="Tahoma" FontSize="12" Foreground="DarkBlue" />

            </Grid>
        </StackPanel>
    </Border>
</UserControl>