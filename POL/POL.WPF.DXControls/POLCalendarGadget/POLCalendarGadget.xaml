<UserControl x:Class="POL.WPF.DXControls.POLCalendarGadget.POLCalendarGadget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"

             xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles">
    <Border Background="OrangeRed" CornerRadius="5" BorderBrush="Gray" BorderThickness="2" Name="bBorder">
        <Grid pol_ap:ApGrid.RowDefinitions="*,auto,auto,auto,*" pol_ap:ApGrid.ColumnDefinitions="auto,*">
            <Grid Grid.Column="0" Grid.RowSpan="5" Width="{Binding Path=ActualHeight, ElementName=bBorder}">
                <TextBlock Margin="6" VerticalAlignment="Center" HorizontalAlignment="Center" Name="tbDayNumber" />
            </Grid>

            <TextBlock Grid.Column="1" Grid.Row="1" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Left"
                       Name="tbDayOfWeek" />
            <TextBlock Grid.Column="1" Grid.Row="2" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Left"
                       Name="tbMonth" />
            <TextBlock Grid.Column="1" Grid.Row="3" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Left"
                       Name="tbYear" />
        </Grid>
    </Border>
</UserControl>