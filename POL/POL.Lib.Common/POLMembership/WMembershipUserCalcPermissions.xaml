<dx:DXWindow x:Class="POL.Lib.Common.POLMembership.WMembershipUserCalcPermissions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="480" Width="600"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"

             Icon="{DynamicResource ApplicationIcon}"
             WindowStartupLocation="CenterOwner"
             ResizeMode="NoResize"

             FontFamily="{DynamicResource ApplicationFontFamily}"
             FontSize="{DynamicResource ApplicationFontSize}">

    <DockPanel FlowDirection="{DynamicResource ApplicationFlowDirection}">
        <Grid DockPanel.Dock="Bottom" Background="{DynamicResource FooterBackground}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!--<Button Margin="0,12" Padding="6,3" MinWidth="80" Content="قبول" IsDefault="True"
                Command="{Binding cmdOK}" />-->
                <Button Margin="12" Padding="6,3" MinWidth="80" Content="بستن" IsCancel="True"
                        Command="{Binding cmdCancel}" />
            </StackPanel>
        </Grid>
        <!--<Separator DockPanel.Dock="Bottom" Margin="0"/>-->
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <ScrollViewer Grid.Row="1">
                <StackPanel Name="spPermissions" Margin="3" />
            </ScrollViewer>
        </Grid>
    </DockPanel>
</dx:DXWindow>