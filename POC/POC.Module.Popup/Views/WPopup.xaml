<Window x:Class="POC.Module.Popup.Views.WPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pol_con="clr-namespace:POL.WPF.DXControls.POLControls;assembly=POL.WPF.DXControls" 
        Height="140" 
        Width="280" 
        
        
        
        FontFamily="Tahoma"
        FlowDirection="LeftToRight"
    
        ResizeMode="NoResize" 
        Topmost="True" 
        WindowStartupLocation="Manual" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent" 
    
        
        >
    <Grid>
        <Border CornerRadius="10,0,0,10" Background="{Binding PopupBrush}">
            <Grid>
                <pol_con:MiniButtonClose 
                    HorizontalAlignment="Left" 
                    Margin="4,10,0,0" 
                    VerticalAlignment="Top" 
                    Command="{Binding cmdClose}" 
                    Visibility="{Binding VisClose}"/>
                <pol_con:MiniToggleButtonPin 
                    HorizontalAlignment="Left" 
                    Margin="4,27,0,0" 
                    VerticalAlignment="Top" 
                    IsChecked="{Binding IsPin}" 
                    Visibility="{Binding VisPin}"/>
                <!--<pol_con:PieChar 
                    HorizontalAlignment="Left" 
                    Margin="4,0,0,10" 
                    VerticalAlignment="Bottom" 
                    Width="14" 
                    Height="14" 
                    PieBackground="#FFB7B7B7" 
                    Foreground="DimGray" 
                    InitialAngle="-90" 
                    Percent="{Binding Percent}" 
                    Visibility="{Binding VisTimeout}"/>-->
            </Grid>
        </Border>
        <Border Background="WhiteSmoke" Margin="20,0,0,0" BorderThickness="1" BorderBrush="DimGray" Name="borderContent" >
        </Border>
        <Border CornerRadius="10,0,0,10" Background="Transparent"  BorderThickness="1" BorderBrush="DimGray" IsHitTestVisible="False"/>
    </Grid>
</Window>
