                    <dxe:ComboBoxEdit.EditNonEditableTemplate>
                        <ControlTemplate>
                            <TextBlock Text="{Binding EditValue}" Margin="3"/>
                        </ControlTemplate>
                    </dxe:ComboBoxEdit.EditNonEditableTemplate>
                </dxe:ComboBoxEdit>
            </StackPanel>-->
            <dxg:GridControl Grid.Row="2" Grid.ColumnSpan="2" x:Name="gcMain" ItemsSource="{Binding CardTableList}" >
                <dxg:GridControl.TotalSummary>
                    <!--<dxg:GridSummaryItem DisplayFormat=" {0}" FieldName="PhoneNumber" ShowInColumn="PhoneNumber" SummaryType="Count" />
                    <dxg:GridSummaryItem DisplayFormat=" {0}" FieldName="This" ShowInColumn="This" SummaryType="Count" />-->
                </dxg:GridControl.TotalSummary>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="UserCreated" Header=""  Name="colUserCreated" CellTemplate="{StaticResource ctUserCreated}" Width="24" FixedWidth="True" Fixed="Left" ColumnChooserHeaderCaption="ثبت كننده" >
                        <dxg:GridColumn.FilterEditorHeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="ثبت كننده"/>
                            </DataTemplate>
                        </dxg:GridColumn.FilterEditorHeaderTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn Name="colTitle" Width="120" FieldName="Title" Header="عنوان" AllowGrouping="False"/>
                    <dxg:GridColumn Name="colPriority" Width="50" FieldName="Priority" Header="اولویت" AllowGrouping="True"/>
                    <dxg:GridColumn Name="colCreatorName" Width="120" FieldName="CreatorName" Header="ثبت كننده" AllowGrouping="True"/>
                    <dxg:GridColumn Name="colSendTo" Width="85" FieldName="SendTo" Header="ارسال به" AllowGrouping="True"/>
                    <dxg:GridColumn Name="colStartingDate" Width="110" FieldName="StartingDate" Header="زمان شروع" AllowGrouping="True" CellTemplate="{StaticResource ctStartingDate}" SortOrder="Descending" SortIndex="0" />
                    <dxg:GridColumn Name="colEndingDate" Width="110" FieldName="EndingDate" Header="مهلت انجام" AllowGrouping="True" CellTemplate="{StaticResource ctEndingDate}" />
                    <dxg:GridColumn Name="colResult" Width="85" FieldName="Result" Header="نتیجه" AllowGrouping="True" CellTemplate="{StaticResource ctResult}"/>
                    <dxg:GridColumn Name="colResultDate" Width="85" FieldName="ResultDate" Header="تاریخ اتمام" AllowGrouping="True"/>


                    <!--<dxg:GridColumn Name="colContactTitle" FieldName="Contact.Title" Header="عنوان" AllowGrouping="False"/>


                    <dxg:GridColumn Name="colPhoneNumber" FieldName="PhoneNumber" Header="شماره" CellTemplate="{StaticResource LeftToRightTemplate}" />
                    <dxg:GridColumn Name="colCodeString" FieldName="CodeString" Header="كد مخابراتی" 
                                    ToolTip="كد مخابراتی" CellTemplate="{StaticResource LeftToRightTemplate}"
                                    AllowGrouping="False" AllowSorting="False" AllowColumnFiltering="False"/>
                    <dxg:GridColumn Name="colTitle" FieldName="Title" Header="عنوان شماره"/>
                    <dxg:GridColumn Name="colNote" FieldName="Note" Header="توضیحات" />-->

                    <!--<dxg:GridColumn Name="colCallOutCount" FieldName="CallOutCount" Header="ت ت ارسالی"  ToolTip="تعداد تماس ارسالی" Visible="{Binding IsViewFull}" VisibleIndex="6"/>
                    <dxg:GridColumn Name="colCallInCount" FieldName="CallInCount" Header="ت ت دریافتی"  ToolTip="تعداد تماس دریافتی" Visible="{Binding IsViewFull}" VisibleIndex="5"/>
                    <dxg:GridColumn Name="colCallTotalCount" FieldName="CallTotalCount" Header="ت ت  كل"  ToolTip="تعداد تماس كل" Visible="{Binding IsViewFull}" VisibleIndex="4"/>
                    <dxg:GridColumn Name="colDurationOut" FieldName="DurationOut" Header="م م ارسالی" ToolTip="مدت مكالمه ارسالی" Visible="{Binding IsViewFull}" VisibleIndex="3"/>
                    <dxg:GridColumn Name="colDurationIn" FieldName="DurationIn" Header="م م  دریافتی"  ToolTip="مدت مكالمه دریافتی" Visible="{Binding IsViewFull}" VisibleIndex="2"/>
                    <dxg:GridColumn Name="colDurationTotal" FieldName="DurationTotal" Header="م م كل"  ToolTip="مدت مكالمه كل" Visible="{Binding IsViewFull}" VisibleIndex="1"/>-->

                    <!--<dxg:GridColumn Name="colAll" FieldName="This" Header="" CellTemplate="{StaticResource AllTemplate}" Visible="{Binding IsViewSimple}" VisibleIndex="0"/>-->

                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView Name="tvMain"
                               AllowCascadeUpdate="True"
                               AllowColumnFiltering="True"
                               AllowEditing="False"
                               AllowFilterEditor="True"
                               AllowGrouping="True"
                               AllowPerPixelScrolling="True"
                                   
                               BestFitMode="VisibleRows"
                               BestFitArea="All"
                               FocusedRow="{Binding FocusedCardTable,Mode=TwoWay}"
                               IsColumnMenuEnabled="True"
                               IsGroupPanelMenuEnabled="True"
                               IsTotalSummaryMenuEnabled="False"
                               MultiSelectMode="Row"
                               ShowGroupPanel="True"
                               ShowIndicator="False"
                               ShowTotalSummary="True" 
                               ShowSearchPanelMode="Never"
                               AutoWidth="False"    
                               ShowColumnHeaders="True" 
                               >
                        <dxg:TableView.RowCellMenuCustomizations>
                            <dxb:BarButtonItemLink BarItemName="biRefresh" />
                            <dxb:BarItemLinkSeparator/>
                            <dxb:BarButtonItemLink BarItemName="biNew" />
                            <dxb:BarButtonItemLink BarItemName="biEdit" />
                            <dxb:BarButtonItemLink BarItemName="biDelete" />
                        </dxg:TableView.RowCellMenuCustomizations>
                    </dxg:TableView>
                </dxg:GridControl.View>
            </dxg:GridControl>
        </Grid>
    </dxb:BarManager>
</UserControl>
