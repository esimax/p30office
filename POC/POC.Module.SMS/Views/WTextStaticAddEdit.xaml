<dx:DXWindow
    x:Class="POC.Module.SMS.Views.WTextStaticAddEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    
    Width="280"
    Height="380" 
    
    Title="{Binding WindowTitle}"
    
    xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    
    FontFamily="{DynamicResource ApplicationFontFamily}" 
    FontSize="{DynamicResource ApplicationFontSize}"
    Icon="{DynamicResource ApplicationIcon}"
    >


    <Grid pol_ap:ApGrid.RowDefinitions="auto,auto,*,auto,auto" 
          pol_ap:ApGrid.ColumnDefinitions="*" Margin="9" 
          FlowDirection="{DynamicResource ApplicationFlowDirection}">


        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="متن پیامك :" />
        <DockPanel Grid.Row="1">
            <Button DockPanel.Dock="Left" Margin="3" Content="راست به چپ" Command="{Binding CommandTextRTL}"/>
            <Button DockPanel.Dock="Right" Margin="3" Content="چپ به راست" Command="{Binding CommandTextLTR}"/>
            <Grid/>
        </DockPanel>
        <dxe:TextEdit Grid.Row="2" Grid.Column="1" Margin="3"  Name="firstFocused"
                      AcceptsReturn="True" AcceptsTab="False" VerticalContentAlignment="Top" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible"
                      EditValue="{Binding TextEntered,UpdateSourceTrigger=PropertyChanged}" MaxLength="1600" FlowDirection="{Binding TextFlowDirection}" TextWrapping="Wrap"/>

        <DockPanel Grid.Row="3">
            <TextBlock DockPanel.Dock="Left" Margin="3" Text="{Binding TextEnteredCountSMS}"/>
            <TextBlock DockPanel.Dock="Right" Margin="3" Text="{Binding TextEnteredCountChar}"/>
            <Grid/>
        </DockPanel>



        <StackPanel Grid.Row="1000" Grid.ColumnSpan="1000" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Margin="0" Padding="6,3" MinWidth="80" IsDefault="True"
                    Command="{Binding CommandOK}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageOK16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="تایید"/>
                </StackPanel>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
                    Command="{Binding CommandCancel}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageCancel16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>
