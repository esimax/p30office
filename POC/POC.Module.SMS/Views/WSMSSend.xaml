<dx:DXWindow xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
    x:Class="POC.Module.SMS.Views.WSMSSend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Height="560" Width="780"
    
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    SnapsToDevicePixels="True"
    
    Title="{Binding WindowTitle}"
    Icon="{DynamicResource ApplicationIcon}"
    FontFamily="{DynamicResource ApplicationFontFamily}" 
    FontSize="{DynamicResource ApplicationFontSize}"
    
    xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" xmlns:models="clr-namespace:POC.Module.SMS.Models"
             xmlns:pol_wpf="clr-namespace:POL.WPF.DXControls.POLDateEdit;assembly=POL.WPF.DXControls">

    <dx:DXWindow.Resources>
        <dx:BoolToVisibilityConverter x:Key="b2vc"/>
        <models:ConvPhoneCompanyTypeToIcon x:Key="convNumberToIcon" />
        <models:ConvBoolToFlowDirection x:Key="convBoolToFlowDirection" />
    </dx:DXWindow.Resources>
    <dxb:BarManager>
        <dxb:BarManager.Items>
            <dxb:BarButtonItem Content="انتخاب همه" Name="biPhoneSelectAll" Command="{Binding CommandPhoneSelectAll}" Glyph="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_SelectAll.png"/>
            <dxb:BarButtonItem Content="انتخاب معكوس" Name="biPhoneSelectInvert" Command="{Binding CommandPhoneSelectInvert}" Glyph="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_SelectInvert.png"/>
            <dxb:BarButtonItem Content="انتخاب هیچكدام" Name="biPhoneSelectNone" Command="{Binding CommandPhoneSelectNone}" Glyph="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_SelectNone.png"/>
            <dxb:BarButtonItem Content="انتخاب اولین از هر پرونده" Name="biPhoneSelectDistinct" Command="{Binding CommandPhoneSelectDistinct}"/>

            <dxb:BarButtonItem Content="انتخاب همراه اول" Name="biPhoneSelectHamrahAval" Command="{Binding CommandPhoneSelectHamrahAval}" Glyph="pack://application:,,,/POL.Lib.Resources;component/Special/XX/_14_HamrahAval.png"/>
            <dxb:BarButtonItem Content="انتخاب ایرانسل" Name="biPhoneSelectIranCell" Command="{Binding CommandPhoneSelectIranCell}" Glyph="pack://application:,,,/POL.Lib.Resources;component/Special/XX/_14_IranCell.png"/>
            <dxb:BarButtonItem Content="انتخاب رایتل" Name="biPhoneSelectRighTel" Command="{Binding CommandPhoneSelectRighTel}" Glyph="pack://application:,,,/POL.Lib.Resources;component/Special/XX/_14_RighTel.png"/>

            <dxb:BarButtonItem Content="كپی شماره های انتخاب شده" Name="biPhoneCopySelected" Command="{Binding CommandPhoneCopySelected}" Glyph="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Copy.png"/>

        </dxb:BarManager.Items>

        <Grid pol_ap:ApGrid.RowDefinitions="*,auto" 
          pol_ap:ApGrid.ColumnDefinitions="*" Margin="9" 
          FlowDirection="{DynamicResource ApplicationFlowDirection}">

            <dx:DXTabControl Margin="0" SelectedIndex="{Binding SelectedTabIndex}" >
                <dx:DXTabItem Header="ارسال به" Visibility="{Binding TabSendToIsVisibile,Converter={StaticResource b2vc}}">
                    <Grid pol_ap:ApGrid.RowDefinitions="auto,auto,auto,auto,*" pol_ap:ApGrid.ColumnDefinitions="auto,190,*">
                        <RadioButton Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="ارسال به پرونده :" 
                                   IsEnabled="{Binding CanSelectContact}" IsChecked="{Binding IsSelectContact}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="3" VerticalAlignment="Center" Text="{Binding DynamicSelectedContact.Title}"/>

                        <RadioButton Grid.Row="1" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="پرونده های انتخاب شده :" 
                                   IsEnabled="{Binding CanSelectContacts}" IsChecked="{Binding IsSelectContacts}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="3" VerticalAlignment="Center" Text="{Binding SelectedContactsCountText}"/>

                        <RadioButton Grid.Row="2" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="ارسال به دسته :" 
                                   IsEnabled="{Binding CanSelectCategory}" IsChecked="{Binding IsSelectCategory}"/>
                        <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="1" Margin="3" VerticalAlignment="Center" IsTextEditable="False"  AllowSpinOnMouseWheel="False"
                                      IsEnabled="{Binding CanDropCategory}"
                                      ItemsSource="{Binding CategoryList}"
                                      SelectedItem="{Binding SelectedCategory,Mode=TwoWay}"
                                      DisplayMember="Title" >
                            <dxe:ComboBoxEdit.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="3" Text="{Binding Title}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </dxe:ComboBoxEdit.ItemTemplate>
                        </dxe:ComboBoxEdit>

                        <RadioButton Grid.Row="3" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="ارسال به سبد انتخاب :" 
                                   IsEnabled="{Binding CanSelectBasket}" IsChecked="{Binding IsSelectBasket}"/>
                        <dxe:ComboBoxEdit Grid.Row="3" Grid.Column="1" Margin="3" VerticalAlignment="Center" IsTextEditable="False" AllowSpinOnMouseWheel="False"
                                      IsEnabled="{Binding CanDropBasket}"
                                      ItemsSource="{Binding BasketList}"
                                      SelectedItem="{Binding SelectedBasket,Mode=TwoWay}"/>

                        <RadioButton Grid.Row="4" Grid.Column="0" Margin="3" VerticalAlignment="Top" Content="ارسال به فهرست :" 
                                   IsEnabled="{Binding CanSelectCustom}" IsChecked="{Binding IsSelectCustom}"/>
                        <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <dxe:TextEdit Grid.Row="0" Grid.Column="0"  Margin="3" VerticalAlignment="Stretch"
                                  HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" 
                                  VerticalContentAlignment="Top" AcceptsReturn="True" AcceptsTab="True" 
                                  pol_ap:ApUIElement.EnKeyboardLayout="" FlowDirection="LeftToRight"
                                  IsEnabled="{Binding CanEditCustom}" 
                                  EditValue="{Binding CustomeValue}"  />
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                                <Button  Margin="3" Width="32" ToolTip="انتخاب از روی پرونده" Command="{Binding CommandSelectContact}" IsEnabled="{Binding CanEditCustom}">...</Button>
                            </StackPanel>
                            
                        </Grid>
                        

                    </Grid>
                </dx:DXTabItem>
                <dx:DXTabItem Header="انتخاب شماره" Visibility="{Binding TabSelectNumberIsVisibile,Converter={StaticResource b2vc}}">
                    <Grid pol_ap:ApGrid.RowDefinitions="*" pol_ap:ApGrid.ColumnDefinitions="*,160">
                        <dxg:GridControl x:Name="gridPhones" ItemsSource="{Binding PhoneList}">
                            <dxg:GridControl.TotalSummary>
                                <dxg:GridSummaryItem DisplayFormat="تعداد: {0}" FieldName="PhoneNumber" ShowInColumn="PhoneNumber" SummaryType="Count" />
                            </dxg:GridControl.TotalSummary>
                            <dxg:GridControl.Columns>
                                <dxg:GridColumn Name="colSelected" FieldName="Selected" Header="" Width="32" AllowGrouping="False" FixedWidth="True" AllowResizing="False"/>
                                <dxg:GridColumn Name="colIcon" FieldName="CompanyType" Header="" AllowEditing="False" Width="32"  AllowGrouping="False" FixedWidth="True" AllowResizing="False" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"  
                                               Source="{Binding RowData.Row.CompanyType, Converter={StaticResource convNumberToIcon}}"/>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>

                                <dxg:GridColumn Name="colPhoneNumber" FieldName="PhoneNumber" Header="شماره" AllowGrouping="False" AllowEditing="False"/>
                                <dxg:GridColumn Name="colCode" FieldName="Code" Header="كد" AllowEditing="False"/>
                                <dxg:GridColumn Name="colTitle" FieldName="Title" Header="عنوان" AllowEditing="False"/>

                            </dxg:GridControl.Columns>
                            <dxg:GridControl.View>
                                <dxg:TableView Name="tvContact"
                               AllowColumnFiltering="false"
                               AllowEditing="True"
                               AllowFilterEditor="False"
                               AllowGrouping="True"
                               AllowPerPixelScrolling="True"
                               BestFitMode="VisibleRows"
                               
                               IsColumnMenuEnabled="True"
                               IsGroupPanelMenuEnabled="True"
                               IsTotalSummaryMenuEnabled="False"
                               MultiSelectMode="Row"
                               ShowGroupPanel="False"
                               ShowIndicator="False"
                               ShowTotalSummary="True" 
                               ShowSearchPanelMode="Never"
                               >
                                    <dxg:TableView.RowCellMenuCustomizations>
                                        <dxb:BarButtonItemLink BarItemName="biPhoneSelectAll" />
                                        <dxb:BarButtonItemLink BarItemName="biPhoneSelectInvert" />
                                        <dxb:BarButtonItemLink BarItemName="biPhoneSelectNone" />
                                        <dxb:BarItemLinkSeparator/>
                                        <dxb:BarButtonItemLink BarItemName="biPhoneSelectDistinct" />
                                        <dxb:BarButtonItemLink BarItemName="biPhoneCopySelected" />
                                        <dxb:BarItemLinkSeparator/>
                                        <dxb:BarButtonItemLink BarItemName="biPhoneSelectHamrahAval" />
                                        <dxb:BarButtonItemLink BarItemName="biPhoneSelectIranCell" />
                                        <dxb:BarButtonItemLink BarItemName="biPhoneSelectRighTel" />
                                    </dxg:TableView.RowCellMenuCustomizations>

                                </dxg:TableView>
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                        <StackPanel Grid.Column="1" Margin="9,0,0,0">
                            <Button Margin="3" Content="شمارش اطلاعات" Command="{Binding CommandPhoneCount}"/>
                            <GroupBox Header="تعداد كل" Margin="3">
                                <Grid pol_ap:ApGrid.ColumnDefinitions="auto,*" pol_ap:ApGrid.RowDefinitions="auto,auto,auto,auto,auto,auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="همراه اول :"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CountPhoneHamrahAval}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="ایرانسل :"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CountPhoneIranCell}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" Text="رایتل :"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CountPhoneRighTel}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="3" Text="غیره :"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CountPhoneOther}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Margin="3" Text="جمع :"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CountPhoneSum}"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="تعداد انتخاب شده" Margin="3">
                                <Grid pol_ap:ApGrid.ColumnDefinitions="auto,*" pol_ap:ApGrid.RowDefinitions="auto,auto,auto,auto,auto,auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="همراه اول :"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CountPhoneSelHamrahAval}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="ایرانسل :"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CountPhoneSelIranCell}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" Text="رایتل :"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CountPhoneSelRighTel}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="3" Text="غیره :"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CountPhoneSelOther}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Margin="3" Text="جمع :"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CountPhoneSelSum}"/>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </Grid>
                </dx:DXTabItem>
                <dx:DXTabItem Header="متن ارسالی" Visibility="{Binding TabSelectTextIsVisibile,Converter={StaticResource b2vc}}">
                    <Grid pol_ap:ApGrid.ColumnDefinitions="*,*,*">
                        <GroupBox Grid.Column="0" Grid.ColumnSpan="2">
                            <GroupBox.Header>
                                <RadioButton Margin="3" Content="تایپ متن / متن ثابت" IsChecked="{Binding IsTextEntered}"/>
                            </GroupBox.Header>
                            <Grid pol_ap:ApGrid.ColumnDefinitions="*,*" IsEnabled="{Binding IsTextEntered}">
                                <Grid Grid.Column="0" Margin="0,0,3,0" pol_ap:ApGrid.RowDefinitions="auto,*,auto" pol_ap:ApGrid.ColumnDefinitions="auto,*,auto" >
                                    <DockPanel Grid.Row="0" Grid.ColumnSpan="3">
                                        <Button DockPanel.Dock="Left" Margin="3" Content="راست به چپ" Command="{Binding CommandTextRTL}"/>
                                        <Button DockPanel.Dock="Right" Margin="3" Content="چپ به راست" Command="{Binding CommandTextLTR}"/>
                                        <Grid/>
                                    </DockPanel>

                                    <dxe:TextEdit Grid.Row="1" Grid.ColumnSpan="3" Margin="3" AcceptsReturn="True" AcceptsTab="False" VerticalContentAlignment="Top" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible"
                                              EditValue="{Binding TextEntered,UpdateSourceTrigger=PropertyChanged}" MaxLength="1600" FlowDirection="{Binding TextFlowDirection}" TextWrapping="Wrap"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" Text="{Binding TextEnteredCountSMS}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Margin="3" Text="{Binding TextEnteredCountChar}"/>
                                </Grid>

                                <Grid Grid.Column="1" Margin="3,0,0,0" pol_ap:ApGrid.RowDefinitions="auto,auto,*" pol_ap:ApGrid.ColumnDefinitions="auto,*" IsEnabled="{Binding IsTextEntered}">
                                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                        <Button Margin="3" Content="جدید" Command="{Binding CommandTextStaticAdd}"/>
                                        <Button Margin="3" Content="ویرایش" Command="{Binding CommandTextStaticEdit}" Name="bTextStaticEdit"/>
                                        <Button Margin="3" Content="حذف" Command="{Binding CommandTextStaticDelete}"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="جستجو :" VerticalAlignment="Center"/>
                                    <dxe:ButtonEdit Grid.Row="1" Grid.Column="1" Margin="3" EditValue="{Binding TextStaticSearch,UpdateSourceTrigger=PropertyChanged}" AllowDefaultButton="False" >
                                        <dxe:ButtonEdit.Buttons>
                                            <dxe:ButtonInfo Command="{Binding CommandTextStaticClear}" GlyphKind="Cancel"/>
                                        </dxe:ButtonEdit.Buttons>
                                    </dxe:ButtonEdit>
                                    <dxe:ListBoxEdit Grid.Row="2" Grid.ColumnSpan="2" Margin="3" HorizontalContentAlignment="Stretch"
                                                     ItemsSource="{Binding TextStaticList}" 
                                                     SelectedItem="{Binding TextStaticSelected}" 
                                                     MouseDoubleClick="ListBoxEdit_MouseDoubleClick_1">
                                        <dxe:ListBoxEdit.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="3" TextWrapping="Wrap" Text="{Binding Body}" 
                                                           FlowDirection="{Binding IsRTL,Converter={StaticResource convBoolToFlowDirection}}" 
                                                           HorizontalAlignment="Stretch"/>
                                            </DataTemplate>
                                        </dxe:ListBoxEdit.ItemTemplate>
                                    </dxe:ListBoxEdit>
                                </Grid>
                            </Grid>
                        </GroupBox>


                        <GroupBox Grid.Column="2">
                            <GroupBox.Header>
                                <RadioButton Margin="3" Content="متن متغییر" IsChecked="{Binding IsTextDynamic}" IsEnabled="False"/>
                            </GroupBox.Header>
                            <Grid pol_ap:ApGrid.RowDefinitions="auto,auto,*" pol_ap:ApGrid.ColumnDefinitions="auto,*" IsEnabled="{Binding IsTextDynamic}">
                                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                    <Button Margin="3" Content="جدید" Command="{Binding CommandTextDynamicAdd}"/>
                                    <Button Margin="3" Content="ویرایش" Command="{Binding CommandTextDynamicEdit}"/>
                                    <Button Margin="3" Content="حذف" Command="{Binding CommandTextDynamicDelete}"/>
                                </StackPanel>
                                <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="جستجو :" VerticalAlignment="Center"/>
                                <dxe:ButtonEdit Grid.Row="1" Grid.Column="1" Margin="3" EditValue="{Binding TextDynamicSearch,UpdateSourceTrigger=PropertyChanged}" AllowDefaultButton="False" >
                                    <dxe:ButtonEdit.Buttons>
                                        <dxe:ButtonInfo Command="{Binding CommandTextDynamicClear}" GlyphKind="Cancel"/>
                                    </dxe:ButtonEdit.Buttons>
                                </dxe:ButtonEdit>
                                <dxe:ListBoxEdit Grid.Row="2" Grid.ColumnSpan="2" Margin="3">
                                    <dxe:ListBoxEdit.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="3" TextWrapping="Wrap" Text="{Binding Text}"/>
                                        </DataTemplate>
                                    </dxe:ListBoxEdit.ItemTemplate>
                                </dxe:ListBoxEdit>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </dx:DXTabItem>
                <dx:DXTabItem Header="پیش نمایش" Visibility="{Binding TabPreviewIsVisibile,Converter={StaticResource b2vc}}">

                </dx:DXTabItem>
                <dx:DXTabItem Header="ارسال" Visibility="{Binding TabSendIsVisibile,Converter={StaticResource b2vc}}">
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Center"
                          pol_ap:ApGrid.ColumnDefinitions="auto,auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="3" Grid.Row="0" Grid.Column="0" Text="تعداد پیامك :"/>
                        <TextBlock Margin="3" Grid.Row="0" Grid.Column="1" Text="{Binding CountSMS}"/>

                        <TextBlock Margin="3" Grid.Row="1" Grid.Column="0" Text="تعداد صفحه :"/>
                        <TextBlock Margin="3" Grid.Row="1" Grid.Column="1" Text="{Binding CountPage}"/>

                        <TextBlock Margin="3" Grid.Row="2" Grid.Column="0" Text="نوع متن :"/>
                        <TextBlock Margin="3" Grid.Row="2" Grid.Column="1" Text="{Binding TextTypeString}"/>

                        <TextBlock Margin="3" Grid.Row="3" Grid.Column="0" Text="ارسال توسط :"/>
                        <TextBlock Margin="3" Grid.Row="3" Grid.Column="1" Text="{Binding SenderName}"/>

                        <TextBlock Margin="3" Grid.Row="4" Grid.Column="0" Text="انتخاب خط :" VerticalAlignment="Center"/>
                        <dxe:ComboBoxEdit Margin="3" Grid.Row="4" Grid.Column="1" 
                                          ItemsSource="{Binding SmsServices}" SelectedItem="{Binding SelectedSmsService}" Width="220" IsTextEditable="False"
                                          AllowSpinOnMouseWheel="False"/>
                        
                        <TextBlock Margin="3" Grid.Row="5" Grid.Column="0" Text="تاریخ ارسال :" VerticalAlignment="Center"/>
                        <pol_wpf:POLDateEdit Margin="3" Grid.Row="5" Grid.Column="1" DateEditValue="{Binding SendDate}"/>

                        <TextBlock Margin="3" Grid.Row="6" Grid.Column="0" Text="ساعت شروع ارسال :"/>
                        <dxe:TextEdit Margin="3" Grid.Row="6" Grid.Column="1" FlowDirection = "LeftToRight"
                                      Mask = "([01]?[0-9]|2[0-3]):[0-5]\d" MaskType = "RegEx" MaskUseAsDisplayFormat = "True"
                                      EditValue="{Binding SendTime}"/>

                        <Button Margin="3" Grid.Row="7" Grid.ColumnSpan="2" Content="ارسال" Command="{Binding CommandSend}"/>
                    </Grid>
                </dx:DXTabItem>
            </dx:DXTabControl>

            <StackPanel Grid.Row="1000" Grid.ColumnSpan="1000" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
                <Button Margin="0" Padding="6,3" MinWidth="80"
                    Command="{Binding CommandNext}">
                    <StackPanel Orientation="Horizontal">
                        <Image Style="{DynamicResource ImageNext16}" />
                        <TextBlock Margin="3" VerticalAlignment="Center" Text="مرحله بعد"/>
                    </StackPanel>
                </Button>
                <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
                    Command="{Binding CommandCancel}">
                    <StackPanel Orientation="Horizontal">
                        <Image Style="{DynamicResource ImageCancel16}" />
                        <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                    </StackPanel>
                </Button>
                <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" 
                    Command="{Binding CommandHelp}">
                    <StackPanel Orientation="Horizontal">
                        <Image Style="{DynamicResource ImageHelp16}" />
                        <TextBlock Margin="3" VerticalAlignment="Center" Text="راهنما"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </Grid>
    </dxb:BarManager>
</dx:DXWindow>
