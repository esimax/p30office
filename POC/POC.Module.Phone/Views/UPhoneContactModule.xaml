<UserControl x:Class="POC.Module.Phone.Views.UPhoneContactModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:pol_conv="clr-namespace:POL.WPF.Controles.Conv;assembly=POL.WPF.Controles"
             xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:common="clr-namespace:POL.Lib.Common;assembly=POL.Lib.Common"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/POL.WPF.DXControls;component/Resources/RTLGridPrintingTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <common:ConvCallDuration x:Key="convDurationSeconds"/>
            
            <DataTemplate x:Key="toolbarCustomization">
                <dxb:BarManagerActionContainer>
                    <dxb:RemoveBarItemAndLinkAction ItemName="exportToWindow" />
                    <dxb:RemoveBarItemAndLinkAction ItemName="open" />
                    <dxb:RemoveBarItemAndLinkAction ItemName="save" />
                    <dxb:RemoveBarItemAndLinkAction ItemName="email" />
                </dxb:BarManagerActionContainer>
            </DataTemplate>
            <dxp:DocumentPreview x:Key="documentPreview" dxp:BarManagerCustomization.Template="{StaticResource toolbarCustomization}" />

            <DataTemplate x:Key="reportHeaderTemplate">
                <dxe:TextEdit IsPrintingMode="True" 
                                  Background="#FF6D8C59" 
                                  HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch" 
                                  Padding="12" 
                                  Margin="0,0,0,8" 
                                  Width="{Binding UsablePageWidth}"
                                  Foreground="#FFFFFFFF" 
                                  FontWeight="Bold" 
                                  FontSize="20" 
                                  HorizontalContentAlignment="Center" 
                                  FontFamily="B Titr"
                                  EditValue="{Binding Content.WindowTitle, Mode=OneWay}" 
                                  FlowDirection="RightToLeft"/>
            </DataTemplate>


            <pol_conv:ConvPhoneTypeToImage x:Key="PhoneTypeToImageConverter"/>
            <pol_conv:ConvPhoneTypeToImage32 x:Key="PhoneTypeToImageConverter32"/>
            <pol_conv:ConvBoolToBrush x:Key="SelRowConverter" TrueBrush="Yellow" FalseBrush="Transparent"/>
            <pol_conv:ConvDummy x:Key="dummy"/>

            <DataTemplate x:Key="IconTemplate">
                <Image Width="16" Height="16" Stretch="Fill" SnapsToDevicePixels="True" Margin="6,0"
                        Source="{Binding DataContext.Value, RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource PhoneTypeToImageConverter}}" />
            </DataTemplate>
            <DataTemplate x:Key="AllTemplate">
                <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Margin="3" >
                    <!--Background="{Binding DataContext.IsSelected, RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource dummy}}"-->
                    <!--<Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFAED2F0" Offset="0"/>
                        <GradientStop Color="#FF8EAFCB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>-->
                    <Grid pol_ap:ApGrid.RowDefinitions="auto,auto" pol_ap:ApGrid.ColumnDefinitions="auto,auto,*,auto" FlowDirection="LeftToRight"  >
                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" FontSize="{DynamicResource PhoneNumberFontSize}" 
                               FontFamily="{DynamicResource PhoneNumberFontFamily}" FontWeight="Bold"
                               VerticalAlignment="Center" Text="{Binding DataContext.Value.CodeString, RelativeSource={RelativeSource TemplatedParent}}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="3" FontSize="{DynamicResource PhoneNumberFontSize}" 
                               FontFamily="{DynamicResource PhoneNumberFontFamily}" FontWeight="Bold"
                               VerticalAlignment="Center" Text="{Binding DataContext.Value.PhoneNumber, RelativeSource={RelativeSource TemplatedParent}}"/>

                        <Image Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Width="32" Height="32" Stretch="Fill" SnapsToDevicePixels="True" Margin="6,0" VerticalAlignment="Center"
                        Source="{Binding DataContext.Value.PhoneType, RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource PhoneTypeToImageConverter32}}" />

                        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" FlowDirection="{DynamicResource ApplicationFlowDirection}">
                            <TextBlock Margin="3" Text="{Binding DataContext.Value.Title, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <TextBlock Margin="3" Text=" - "/>
                            <TextBlock Margin="3" Text="{Binding DataContext.Value.CountryCityTitle, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <!--<TextBlock Margin="3" Text=" - "/>
                        <TextBlock Margin="3" Text="{Binding DataContext.Value.City.TitleXX, RelativeSource={RelativeSource TemplatedParent}}"/>-->
                            <TextBlock Margin="3" Text="{Binding DataContext.Value.Note, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </StackPanel>

                    </Grid>

                </Border>
            </DataTemplate>

            <DataTemplate x:Key="LeftToRightTemplate">
                <TextBlock 
                    Margin="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right" 
                    FlowDirection="LeftToRight" 
                    Text="{Binding DataContext.Value, RelativeSource={RelativeSource TemplatedParent}}"/>
            </DataTemplate>

            <DataTemplate x:Key="ctDurationSeconds">
                <TextBlock
                    Margin="3,1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    FlowDirection="LeftToRight"
                    Text="{Binding DataContext.Value, Converter={StaticResource convDurationSeconds}, RelativeSource={RelativeSource TemplatedParent}}"
                    />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <dxb:BarManager IsEnabled="{Binding RootEnable}">
        <dxb:BarManager.Items>
            <dxb:BarButtonItem Content="شماره جدید" Name="biNew" Command="{Binding CommandNew}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Add.png"/>
            <dxb:BarButtonItem Content="جدید (تعداد)" Name="biNewMulti" Command="{Binding CommandNewMulti}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Add.png"/>
            <dxb:BarButtonItem Content="ویرایش" Name="biEdit" Command="{Binding CommandEdit}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Editblue.png"/>
            <dxb:BarButtonItem Content="حذف" Name="biDelete" Command="{Binding CommandDelete}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Delete2.png"/>
            <dxb:BarButtonItem Content="بازخوانی" Name="biRefresh" Command="{Binding CommandRefresh}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Refresh.png"/>

            <dxb:BarButtonItem Content="كپی متن شماره" Name="biCopyPhoneNumber"  Command="{Binding CommandCopyPhoneNumber}" />
            
            <dxb:BarButtonItem Content="برش" Name="biCut" Command="{Binding CommandCut}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Cut.png"/>
            <dxb:BarButtonItem Content="جایگزاری" Name="biPaste" Command="{Binding CommandPaste}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Paste.png"/>

            <dxb:BarButtonItem Content="محاسبه" Name="biCalculate" Command="{Binding CommandCalculate}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Calculate.png"/>

            <dxb:BarButtonItem Content="ساده" Name="biViewSimple" Command="{Binding CommandViewSimple}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Special/32/_32_MenuItem.png"/>
            <dxb:BarButtonItem Content="كامل" Name="biViewFull" Command="{Binding CommandViewFull}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_List2.png"/>

            <dxb:BarButtonItem Content="چاپ" Name="biPrint" Command="{Binding CommandPrint}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Printer.png"/>

            <dxb:BarButtonItem Content="راهنما" Name="biHelp" Command="{Binding CommandHelp}" LargeGlyph="pack://application:,,,/POL.Lib.Resources;component/Standard/32/_32_Help.png"/>
        </dxb:BarManager.Items>

        <Grid  pol_ap:ApGrid.RowDefinitions="auto,auto,*">
            <dxr:RibbonControl Grid.Row="0" x:Name="phoneRibbon" RibbonStyle="Office2010" >
                <dxr:RibbonPageCategory Name="rpcPhone">
                <!--<dxr:RibbonDefaultPageCategory >-->
                    <dxr:RibbonPage Name="rpPhone" Caption="شماره تماس" MergeOrder="4"><!--MergeOrder="5"-->
                        <dxr:RibbonPageGroup Caption="شماره" >
                            <dxb:BarButtonItemLink BarItemName="biNew" />
                            <!--<dxb:BarButtonItemLink BarItemName="biNewMulti" />-->
                            <dxb:BarButtonItemLink BarItemName="biEdit" />
                            <dxb:BarItemLinkSeparator/>
                            <dxb:BarButtonItemLink BarItemName="biDelete" />
                            <dxb:BarItemLinkSeparator/>
                            <dxb:BarButtonItemLink BarItemName="biRefresh" />
                            <!--<dxb:BarItemLinkSeparator/>-->
                        </dxr:RibbonPageGroup>
                        <dxr:RibbonPageGroup Caption="ابزار" >
                            <dxb:BarButtonItemLink BarItemName="biCut" />
                            <dxb:BarButtonItemLink BarItemName="biPaste" />
                            <dxb:BarButtonItemLink BarItemName="biCalculate" />
                        </dxr:RibbonPageGroup>
                        <dxr:RibbonPageGroup Caption="نمایش" >
                            <dxb:BarButtonItemLink BarItemName="biViewSimple" />
                            <dxb:BarButtonItemLink BarItemName="biViewFull" />
                            <dxb:BarItemLinkSeparator/>
                            <dxb:BarButtonItemLink BarItemName="biPrint" />
                        </dxr:RibbonPageGroup>
                        <dxr:RibbonPageGroup Caption="راهنما" >
                            <dxb:BarButtonItemLink BarItemName="biHelp" />
                        </dxr:RibbonPageGroup>
                    </dxr:RibbonPage>
                <!--</dxr:RibbonDefaultPageCategory>-->
                </dxr:RibbonPageCategory>
            </dxr:RibbonControl>

            <StackPanel Grid.Row="1" Orientation="Horizontal" >
                <TextBlock Margin="3" Text="م م = مدت مكالمه، ت ت = تعداد تماس" Visibility="{Binding IsViewFull}"></TextBlock>
            </StackPanel>
            <dxg:GridControl Grid.Row="2" x:Name="gcMain" ItemsSource="{Binding PhoneList}" >
                <dxg:GridControl.TotalSummary>
                    <dxg:GridSummaryItem DisplayFormat=" {0}" FieldName="PhoneNumber" ShowInColumn="PhoneNumber" SummaryType="Count" />
                    <dxg:GridSummaryItem DisplayFormat=" {0}" FieldName="This" ShowInColumn="This" SummaryType="Count" />
                </dxg:GridControl.TotalSummary>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn Name="colPhoneType" Width="32" FieldName="PhoneType" Header="" SortMode="Value" CellTemplate="{StaticResource IconTemplate}" Visible="{Binding IsViewFull}" VisibleIndex="11"/>
                    <dxg:GridColumn Name="colTitle" FieldName="Title" Header="عنوان" Visible="{Binding IsViewFull}" VisibleIndex="10"/>

                    <dxg:GridColumn Name="colPhoneNumber" FieldName="PhoneNumber" Header="شماره" CellTemplate="{StaticResource LeftToRightTemplate}" Visible="{Binding IsViewFull}" VisibleIndex="9"/>
                    <dxg:GridColumn Name="colCodeString" FieldName="CodeString" Header="كد" ToolTip="كد مخابراتی" CellTemplate="{StaticResource LeftToRightTemplate}" Visible="{Binding IsViewFull}" VisibleIndex="8"/>
                    <dxg:GridColumn Name="colNote" FieldName="Note" Header="توضیحات"  Visible="{Binding IsViewFull}" VisibleIndex="7"/>

                    <dxg:GridColumn Name="colCallOutCount" FieldName="CallOutCount" Header="ت ت ارسالی"  ToolTip="تعداد تماس ارسالی" Visible="{Binding IsViewFull}" VisibleIndex="6"/>
                    <dxg:GridColumn Name="colCallInCount" FieldName="CallInCount" Header="ت ت دریافتی"  ToolTip="تعداد تماس دریافتی" Visible="{Binding IsViewFull}" VisibleIndex="5"/>
                    <dxg:GridColumn Name="colCallTotalCount" FieldName="CallTotalCount" Header="ت ت  كل"  ToolTip="تعداد تماس كل" Visible="{Binding IsViewFull}" VisibleIndex="4"/>
                    <dxg:GridColumn Name="colDurationOut" FieldName="DurationOut" Header="م م ارسالی" ToolTip="مدت مكالمه ارسالی" Visible="{Binding IsViewFull}" VisibleIndex="3" CellTemplate="{StaticResource ctDurationSeconds}"/>
                    <dxg:GridColumn Name="colDurationIn" FieldName="DurationIn" Header="م م  دریافتی"  ToolTip="مدت مكالمه دریافتی" Visible="{Binding IsViewFull}" VisibleIndex="2" CellTemplate="{StaticResource ctDurationSeconds}"/>
                    <dxg:GridColumn Name="colDurationTotal" FieldName="DurationTotal" Header="م م كل"  ToolTip="مدت مكالمه كل" Visible="{Binding IsViewFull}" VisibleIndex="1" CellTemplate="{StaticResource ctDurationSeconds}"/>

                    <dxg:GridColumn Name="colAll" FieldName="This" Header="" CellTemplate="{StaticResource AllTemplate}" Visible="{Binding IsViewSimple}" VisibleIndex="0"/>

                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView Name="tvMain"
                               AllowCascadeUpdate="True"
                               AllowColumnFiltering="False"
                               AllowEditing="False"
                               AllowFilterEditor="False"
                               AllowGrouping="True"
                               AllowPerPixelScrolling="True"
                                   
                               BestFitMode="VisibleRows"
                               BestFitArea="All"
                               FocusedRow="{Binding FocusedPhone,Mode=TwoWay}"
                               IsColumnMenuEnabled="True"
                               IsGroupPanelMenuEnabled="True"
                               IsTotalSummaryMenuEnabled="False"
                               MultiSelectMode="Row"
                               ShowGroupPanel="False"
                               ShowIndicator="False"
                               ShowTotalSummary="True" 
                               ShowSearchPanelMode="Never"
                               AutoWidth="{Binding IsViewSimple}"    
                               ShowColumnHeaders="{Binding IsViewFull}" 
                               ShowHorizontalLines="{Binding IsViewFull}"
                               ShowVerticalLines="{Binding IsViewFull}"
                                   
                               PrintHeaderTemplate="{StaticResource RTLPrintHeaderTemplate}"
                               PrintGroupRowTemplate="{StaticResource RTLPrintGroupRowTemplate}"
                               PrintRowTemplate="{StaticResource RTLPrintRowTemplate}"
                               PrintFooterTemplate="{StaticResource RTLPrintFooterTemplate}"
                                   >

                        <dxg:TableView.PrintTotalSummaryStyle>
                            <Style TargetType="dxe:BaseEdit" BasedOn="{StaticResource RTLPrintTotalSummaryStyle}">
                                <Setter Property="HorizontalContentAlignment" Value="Right" />
                                <Setter Property="FontFamily" Value="{DynamicResource ApplicationFontFamily}" />
                                <Setter Property="FontSize" Value="{DynamicResource ApplicationFontSize}" />
                            </Style>
                        </dxg:TableView.PrintTotalSummaryStyle>
                        <dxg:TableView.PrintColumnHeaderStyle>
                            <Style TargetType="dxe:BaseEdit" BasedOn="{StaticResource RTLPrintColumnHeaderStyle}">
                                <Setter Property="HorizontalContentAlignment" Value="Right" />
                                <Setter Property="FontFamily" Value="{DynamicResource ApplicationFontFamily}" />
                                <Setter Property="FontSize" Value="{DynamicResource ApplicationFontSize}" />
                            </Style>
                        </dxg:TableView.PrintColumnHeaderStyle>
                        <dxg:TableView.PrintCellStyle>
                            <Style  BasedOn="{StaticResource RTLPrintCellStyle}" TargetType="dxe:BaseEdit">
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="FontFamily" Value="{DynamicResource ApplicationFontFamily}" />
                                <Setter Property="FontSize" Value="{DynamicResource ApplicationFontSize}" />
                                <Setter Property="BorderThickness" Value="0,0,1,0" />
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                            </Style>
                        </dxg:TableView.PrintCellStyle>
                        <dxg:TableView.CellStyle>
                            <Style TargetType="dxg:CellContentPresenter">
                                <Setter Property="FontFamily" Value="{DynamicResource ApplicationFontFamily}" />
                                <Setter Property="FontSize" Value="{DynamicResource ApplicationFontSize}" />
                            </Style>
                        </dxg:TableView.CellStyle>
                        <dxg:TableView.TotalSummaryContentStyle>
                            <Style TargetType="dx:DataContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                            </Style>
                        </dxg:TableView.TotalSummaryContentStyle>

                        <dxg:TableView.RowCellMenuCustomizations>
                            <dxb:BarButtonItemLink BarItemName="biRefresh" />
                            <dxb:BarItemLinkSeparator/>
                            <dxb:BarButtonItemLink BarItemName="biNew" />
                            <dxb:BarButtonItemLink BarItemName="biEdit" />
                            <dxb:BarButtonItemLink BarItemName="biDelete" />
                            <dxb:BarItemLinkSeparator/>
                            <dxb:BarButtonItemLink BarItemName="biCopyPhoneNumber" />
                            <!--
                            <dxb:BarButtonItemLink BarItemName="biCopy" />
                            <dxb:BarButtonItemLink BarItemName="biCut" />
                            <dxb:BarButtonItemLink BarItemName="biPaste" />-->
                            <dxb:BarItemLinkSeparator/>
                            <dxb:BarButtonItemLink BarItemName="biViewSimple" />
                            <dxb:BarButtonItemLink BarItemName="biViewFull" />
                        </dxg:TableView.RowCellMenuCustomizations>
                    </dxg:TableView>
                </dxg:GridControl.View>
            </dxg:GridControl>
        </Grid>
    </dxb:BarManager>
</UserControl>
