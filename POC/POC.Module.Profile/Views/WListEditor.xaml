<dx:DXWindow
    x:Class="POC.Module.Profile.Views.WListEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    
    Width="480"
    Height="600"
    
    Title="{Binding WindowTitle}"
    Icon="{DynamicResource ApplicationIcon}"
    
    xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    
    FontFamily="{DynamicResource ApplicationFontFamily}" 
    FontSize="{DynamicResource ApplicationFontSize}"
    >

    <dx:DXWindow.Resources>
        <Style x:Key="LayoutItemLabelStyle" TargetType="dxlc:LayoutItemLabel">
            <Setter Property="Width" Value="120"/>
        </Style>

        <ControlTemplate x:Key="CountryPopupTemplate">
            <dxg:GridControl Name="PART_GridControl">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="TitleXX" Header="عنوان"/>
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView AutoWidth="True" AllowGrouping="False" AllowColumnFiltering="false" AllowColumnMoving="False" AllowEditing="False"/>
                </dxg:GridControl.View>
            </dxg:GridControl>
        </ControlTemplate>
        <ControlTemplate x:Key="CityPopupTemplate">
            <dxg:GridControl Name="PART_GridControl">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="StateTitle" Header="استان" AllowSearchPanel="False"/>
                    <dxg:GridColumn FieldName="TitleXX" Header="عنوان"/>
                    <!--<dxg:GridColumn FieldName="PhoneCode" Header="كد مخابراتی"/>
                    <dxg:GridColumn FieldName="PhoneLen" Header="ا.ش" ToolTip="اندازه شماره" Width="38" AllowSearchPanel="False"/>-->
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView AutoWidth="True" AllowGrouping="False" AllowColumnFiltering="false" AllowColumnMoving="False" AllowEditing="False"/>
                </dxg:GridControl.View>
            </dxg:GridControl>
        </ControlTemplate>
    </dx:DXWindow.Resources>

    <Grid pol_ap:ApGrid.RowDefinitions="auto,*,auto"  Margin="9"
          pol_ap:ApGrid.ColumnDefinitions="*"
          FlowDirection="{DynamicResource ApplicationFlowDirection}">
        
        <StackPanel Margin="6" Grid.Row="0" Orientation="Horizontal">
            <Label Margin="3" Content="پرونده :" VerticalAlignment="Center" FontWeight="Bold"/>
            <Label Margin="3" VerticalAlignment="Center" Name="lblContact" FontWeight="Bold"/>
        </StackPanel>
        
        <Grid Grid.Row="1" Name="grid" >
            
        </Grid>


        <StackPanel Grid.Row="1000" Grid.ColumnSpan="1000" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Margin="0" Padding="6,3" MinWidth="80" IsDefault="True"
                    Command="{Binding CommandOK}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageOK16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="تایید"/>
                </StackPanel>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
                    Command="{Binding CommandCancel}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageCancel16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>
