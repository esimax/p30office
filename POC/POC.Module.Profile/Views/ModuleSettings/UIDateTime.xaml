<UserControl x:Class="POC.Module.Profile.Views.ModuleSettings.UIDateTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:pol_de="clr-namespace:POL.WPF.DXControls.POLDateEdit;assembly=POL.WPF.DXControls" mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">
    <StackPanel>
        <TextBlock Margin="3" Text="نوع تقویم :"/>
        <dxe:ComboBoxEdit Margin="3" Name="cbeCalendar" SelectedIndex="0" IsTextEditable="False" AllowSpinOnMouseWheel="False">
            <dxe:ComboBoxEditItem Content="پیش فرض برنامه"/>
            <dxe:ComboBoxEditItem Content="شمسی"/>
            <dxe:ComboBoxEditItem Content="قمری"/>
            <dxe:ComboBoxEditItem Content="میلادی"/>
        </dxe:ComboBoxEdit>
        <TextBlock Margin="3" Text="مقدار پیش فرض :"/>
        <pol_de:POLDateEdit Margin="3" Name="poldeDefaultValue" />
        <dxe:TextEdit Margin="3" Name="teDefaultValue" FlowDirection="LeftToRight" 
                      MaskType="RegEx"
                      Mask="([01]?[0-9]|2[0-3]):[0-5]\d" 
                      MaskUseAsDisplayFormat="True"/>
        
        <dxe:CheckEdit Margin="3" Name="cbDefaultIsOffset" >
            <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="مقدار پیش فرض با توجه به زمان ثبت با اختلاف روز های زیر قرار داده شود :"/>
        </dxe:CheckEdit>
        <dxe:SpinEdit Margin="3" Mask="d" MaskType="Numeric" Name="seDayOffset" FlowDirection="LeftToRight" MaxValue="365" MinValue="-365"/>

        <CheckBox Name="cbAutomation" Margin="3" Content="اتوماسیون" Checked="cbAutomation_Checked" Unchecked="cbAutomation_Unchecked"/>
        <GroupBox Name="gbAutomation" Header="تنظیمات" IsEnabled="False">
            <StackPanel>
                <dxe:ComboBoxEdit Name="cbeAutomation" Margin="3" IsTextEditable="False" AllowSpinOnMouseWheel="False">
                    <dxe:ComboBoxEdit.Buttons>
                        <dxe:ButtonInfo GlyphKind="Plus" Command="{Binding CommandAddAutomation}" />
                    </dxe:ComboBoxEdit.Buttons>
                </dxe:ComboBoxEdit>
                <dxe:TextEdit Margin="3" Name="teTime" FlowDirection = "LeftToRight"  Mask = "([01]?[0-9]|2[0-3]):[0-5]\d" MaskType = "RegEx" MaskUseAsDisplayFormat = "True"/>
                <RadioButton Margin="3" Name="rbYear" Content="سالیانه" GroupName="g1" IsChecked="True"/>
                <RadioButton Margin="3" Name="rbMonth" Content="ماهیانه" GroupName="g1"/>
            </StackPanel>
        </GroupBox>

        <dxe:CheckEdit Margin="3" Content="اجباری" Name="cbRequired"/>
    </StackPanel>
</UserControl>
