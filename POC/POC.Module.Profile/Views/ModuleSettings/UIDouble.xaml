<UserControl x:Class="POC.Module.Profile.Views.ModuleSettings.UIDouble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="0,3,0,-3">
        <TextBlock Margin="3" Text="نوع عدد :"/>
        <dxe:ComboBoxEdit Margin="3" Name="cbNumberMask" IsTextEditable="False" AllowSpinOnMouseWheel="False">
            <dxe:ComboBoxEditItem Content="عدد صحیح - با جدا شونده"/>
            <dxe:ComboBoxEditItem Content="عدد صحیح"/>
            <dxe:ComboBoxEditItem Content="عدد اعشاری دو رقم"/>
            <dxe:ComboBoxEditItem Content="عدد اعشاری شش رقم"/>
            <dxe:ComboBoxEditItem Content="درصد"/>
            <dxe:ComboBoxEditItem Content="درصد با دو رقم اعشار"/>
        </dxe:ComboBoxEdit>
        
        <dxe:CheckEdit Margin="3" Content="محدود شود به حداقل" Name="cbMin"/>
        <dxe:TextEdit Margin="3"  Name="teMin" IsEnabled="{Binding IsChecked, ElementName=cbMin}" MaskType="Numeric" MaskUseAsDisplayFormat="True" FlowDirection="LeftToRight"/>
        <dxe:CheckEdit Margin="3" Content="محدود شود به حداكثر" Name="cbMax"/>
        <dxe:TextEdit Margin="3"  Name="teMax" IsEnabled="{Binding IsChecked, ElementName=cbMax}" MaskType="Numeric" MaskUseAsDisplayFormat="True" FlowDirection="LeftToRight"/>

        <TextBlock Margin="3" Text="مقدار پیش فرض :"/>
        <dxe:TextEdit Margin="3"  Name="teDefaultValue" MaskType="Numeric" MaskUseAsDisplayFormat="True" FlowDirection="LeftToRight"/>

        <dxe:CheckEdit Margin="3" Content="اجباری" Name="cbRequired"/>
    </StackPanel>
</UserControl>
