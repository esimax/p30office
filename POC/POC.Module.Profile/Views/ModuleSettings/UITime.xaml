<UserControl x:Class="POC.Module.Profile.Views.ModuleSettings.UITime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Margin="3" Text="مقدار پیش فرض :"/>
        <dxe:TextEdit Margin="3" Name="teDefaultValue" FlowDirection="LeftToRight" 
                      MaskType="RegEx"
                      Mask="([01]?[0-9]|2[0-3]):[0-5]\d" 
                      MaskUseAsDisplayFormat="True"/>
        <dxe:CheckEdit Margin="3" Name="cbDefaultIsNow" >
            <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" Text="مقدار پیش فرض با توجه به زمان ثبت تعیین گردد."/>
        </dxe:CheckEdit>
        <dxe:CheckEdit Margin="3" Content="اجباری" Name="cbRequired"/>
    </StackPanel>
</UserControl>
