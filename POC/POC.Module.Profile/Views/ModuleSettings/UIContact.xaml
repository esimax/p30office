<UserControl x:Class="POC.Module.Profile.Views.ModuleSettings.UIContact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <dxe:CheckEdit Margin="3" Content="استفاده از دسته خاص" Name="cbFromCat"/>
        <dxe:ComboBoxEdit Margin="3" Name="cbeCat" SelectedIndex="0" IsTextEditable="False" IsEnabled="{Binding IsChecked,ElementName=cbFromCat}" AllowSpinOnMouseWheel="False"/>
        <dxe:CheckEdit Margin="3" Content="اجباری" Name="cbRequired"/>
    </StackPanel>
</UserControl>
