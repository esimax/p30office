<UserControl x:Class="POC.Module.Profile.Views.ModuleSettings.UILocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <dxe:CheckEdit Margin="3" Content="نقشه نمایش داده شود" Name="cbShowMap"/>
        <TextBlock Margin="3" Text="مقدار پیش فرض عرض جغرافیایی :"/>
        <dxe:SpinEdit Margin="3" Mask="n3" MaskType="Numeric" Name="seLatMax" FlowDirection="LeftToRight" MaxValue="90" MinValue="-90" MaskUseAsDisplayFormat="True" IsFloatValue="True" Increment="0.1"/>
        <TextBlock Margin="3" Text="مقدار پیش فرض طول جغرافیایی :"/>
        <dxe:SpinEdit Margin="3" Mask="n3" MaskType="Numeric" Name="seLongMax" FlowDirection="LeftToRight" MaxValue="180" MinValue="-180" MaskUseAsDisplayFormat="True" IsFloatValue="True" Increment="0.1"/>
        <TextBlock Margin="3" Text="مقدار پیش فرض بزرگ نمایی :"/>
        <dxe:SpinEdit Margin="3" Mask="d" MaskType="Numeric" Name="seZoom" FlowDirection="LeftToRight" MaxValue="16" MinValue="1" IsFloatValue="False" Increment="1" Value="1"/>
        <dxe:CheckEdit Margin="3" Content="اجباری" Name="cbRequired"/>
    </StackPanel>
</UserControl>
