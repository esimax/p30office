<dx:DXWindow
    x:Class="POC.Module.Contact.Views.WContactCatSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Width="380"
    Height="360" 
    
    Title="{Binding WindowTitle}"
    Icon="{DynamicResource ApplicationIcon}"
    
    xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    
    FontFamily="{DynamicResource ApplicationFontFamily}" 
    FontSize="{DynamicResource ApplicationFontSize}"
    >

    <dx:DXWindow.Resources>
        <DataTemplate x:Key="CheckEditType">
            <dxe:CheckEdit Content="{Binding CategoryTitle}" IsChecked="{Binding CategoryState}" IsThreeState="True" />
        </DataTemplate>
        <DataTemplate x:Key="TextBlockType">
            <TextBlock Text="{Binding CategoryTitle}"/>
        </DataTemplate>
    </dx:DXWindow.Resources>
    <Grid pol_ap:ApGrid.RowDefinitions="auto,*,auto" 
          pol_ap:ApGrid.ColumnDefinitions="auto,*" Margin="9" 
          FlowDirection="{DynamicResource ApplicationFlowDirection}">


        <!--<dxe:ListBoxEdit Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <dxe:ListBoxEdit.StyleSettings>
                <dxe:CheckedListBoxEditStyleSettings />
            </dxe:ListBoxEdit.StyleSettings>
            <dxe:ListBoxEditItem Content="dsfsd" IsSelected="{x:Null}" />
        </dxe:ListBoxEdit>-->
        <ListBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="3" ItemsSource="{Binding CategoryList}" 
                 SelectedItem="{Binding SelectedContactCat}"
                 ItemTemplate="{StaticResource CheckEditType}"
                 Name="lbMain">
            <!--<ListBox.ItemTemplate>
                <DataTemplate>
                    <dxe:CheckEdit Content="{Binding CategoryTitle}" IsChecked="{Binding CategoryState}" IsThreeState="True" />
                </DataTemplate>
            </ListBox.ItemTemplate>-->
        </ListBox>

        <StackPanel Grid.Row="1000" Grid.ColumnSpan="1000" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Margin="0" Padding="6,3" MinWidth="80" IsDefault="True"
                    Command="{Binding CommandOK}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageOK16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="تایید"/>
                </StackPanel>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
                    Command="{Binding CommandCancel}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageCancel16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>
