<Window x:Class="POC.Module.Contact.Views.WContactFastCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
        xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:poc_conv="clr-namespace:POL.WPF.Controles.Conv;assembly=POL.WPF.Controles"
        
        Title="{Binding WindowTitle}"
        Icon="{DynamicResource ApplicationIcon}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" 
    
        FontFamily="{DynamicResource ApplicationFontFamily}" 
        FontSize="{DynamicResource ApplicationFontSize}"
        FlowDirection="{DynamicResource ApplicationFlowDirection}"
        Width="700"
        Height="600"
        >
    <Grid pol_ap:ApGrid.RowDefinitions="*,auto" pol_ap:ApGrid.ColumnDefinitions="auto,*" Margin="12">
        <StackPanel Grid.Row="0" Grid.Column="0" Width="220" >
            <TextBlock Margin="3" Text="كد پرونده :"></TextBlock>
            <Border Margin="3" BorderThickness="1" BorderBrush="CadetBlue">
                <TextBlock Margin="3" Text="{Binding Path = DynamicContact.Code}" HorizontalAlignment="Center" />
            </Border>
            <TextBlock Margin="3" Text="عنوان پرونده :"></TextBlock>
            <Border Margin="3" BorderThickness="1" BorderBrush="CadetBlue">
                <TextBlock Margin="3" Text="{Binding Path = DynamicContact.Title}" HorizontalAlignment="Center" />
            </Border>

            <TextBlock Margin="3" Text="دسته :"></TextBlock>
            <Border Margin="3" BorderThickness="1" BorderBrush="CadetBlue">
                <TextBlock Margin="3" Text="{Binding Path = SelectedContactCategories}" HorizontalAlignment="Center" />
            </Border>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Margin="0" Padding="6,3" MinWidth="80" IsDefault="True"
                    Command="{Binding CommandOK}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageOK16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="تایید"/>
                </StackPanel>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
                    Command="{Binding CommandCancel}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageCancel16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <ScrollViewer Grid.Row="0" Grid.Column="1">
            <StackPanel Name="TheStackPanel">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
