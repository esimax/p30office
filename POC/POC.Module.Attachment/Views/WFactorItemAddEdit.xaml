<dx:DXWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    x:Class="POC.Module.Attachment.Views.WFactorItemAddEdit"
      
    Width="440"
    Height="320" 
    
    Title="{Binding WindowTitle}"
    Icon="{DynamicResource ApplicationIcon}"
    
    xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    
    FontFamily="{DynamicResource ApplicationFontFamily}" 
    FontSize="{DynamicResource ApplicationFontSize}"
    >


    <Grid pol_ap:ApGrid.RowDefinitions="auto,auto,auto,auto,auto,auto,auto,*,auto" 
          pol_ap:ApGrid.ColumnDefinitions="auto,*,auto" Margin="9" 
          FlowDirection="{DynamicResource ApplicationFlowDirection}">


        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="كالا :" />
        <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="1" Margin="3" EditValue="{Binding Product,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MinWidth="200" 
                          IsTextEditable="True" ItemsSource="{Binding ProductList}" 
                          IncrementalFiltering="True" Name="firstFocused"
                          DisplayMember="Title" AutoComplete="True" AllowSpinOnMouseWheel="False"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="هزینه :" />
        <dxe:TextEdit Grid.Row="1" Grid.Column="1" Margin="3" EditValue="{Binding Price,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MinWidth="200" 
                      Mask="n0" MaskType="Numeric" MaskUseAsDisplayFormat="True"
                      FlowDirection="LeftToRight" IsReadOnly="{Binding IsEditMode}"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Margin="3" VerticalAlignment="Center" Text="ریال"  Width="65"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="مقدار/عدد :" />
        <dxe:TextEdit Grid.Row="2" Grid.Column="1" Margin="3" EditValue="{Binding ProductCount,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" MinWidth="200" MaxLength="14"
                      FlowDirection="LeftToRight" IsReadOnly="{Binding IsEditMode}"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Margin="3" VerticalAlignment="Center" Text="{Binding UnitTitle}"  Width="65"/>

        

        <TextBlock Grid.Row="6" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="جمع :" />
        <dxe:TextEdit Grid.Row="6" Grid.Column="1" Margin="3" EditValue="{Binding Sum,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MinWidth="200" FlowDirection="LeftToRight" 
                      Mask="n0" MaskType="Numeric" MaskUseAsDisplayFormat="True" IsReadOnly="True"/>
        <TextBlock Grid.Row="6" Grid.Column="3" Margin="3" VerticalAlignment="Center" Text="ریال" />

        <StackPanel Grid.Row="1000" Grid.ColumnSpan="1000" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Margin="0" Padding="6,3" MinWidth="80" IsDefault="True"
                    Command="{Binding CommandOK}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageOK16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="تایید"/>
                </StackPanel>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
                    Command="{Binding CommandCancel}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageCancel16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>