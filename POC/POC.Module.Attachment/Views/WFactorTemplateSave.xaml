<Window x:Class="POC.Module.Attachment.Views.WFactorTemplateSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POC.Module.Attachment.Views"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        mc:Ignorable="d"
        Title="ذخیره قالب اطلاعات تکمیلی فاکتور" Height="300" Width="600"
        FlowDirection="RightToLeft"
        Icon="{DynamicResource ApplicationIcon}"
   
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" 
    
        FontFamily="{DynamicResource ApplicationFontFamily}" 
        FontSize="{DynamicResource ApplicationFontSize}"
        >
    <Grid Margin="9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="نام قالب :" />
        <dxe:TextEdit Grid.Row="0" Grid.Column="1" Margin="3"  MaxLength="100" HorizontalAlignment="Stretch" Name="textTitle"/>

        <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="3" Name="listviewAll"></ListView>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Margin="3" Padding="6,3" MinWidth="80" IsDefault="True" Content="انتخاب" Name="btSelect" />
            <Button Margin="3" Padding="6,3" MinWidth="80" Content="پیش فرض" Name="btDefault" />
            <Button Margin="3" Padding="6,3" MinWidth="80" Content="ذخیره" Name="btOk" />
            <Button Margin="3" Padding="6,3" MinWidth="80" Content="حذف" Name="btDelete" />
            <Button Margin="3" Padding="6,3" MinWidth="80" Content="لغو" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
