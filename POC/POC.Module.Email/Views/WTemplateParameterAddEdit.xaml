<dx:DXWindow
    x:Class="POC.Module.Email.Views.WTemplateParameterAddEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Width="320"
    Height="200" 
    
    Title="{Binding WindowTitle}"
    Icon="{DynamicResource ApplicationIcon}"
    
    xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    
    FontFamily="{DynamicResource ApplicationFontFamily}" 
    FontSize="{DynamicResource ApplicationFontSize}"
    >


    <Grid pol_ap:ApGrid.RowDefinitions="auto,auto,auto,*,auto" 
          pol_ap:ApGrid.ColumnDefinitions="auto,*" Margin="9" 
          FlowDirection="{DynamicResource ApplicationFlowDirection}">


        <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="عنوان تگ :" />
        <dxe:TextEdit Grid.Row="1" Grid.Column="1" Margin="3" 
                      EditValue="{Binding TagTitle,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                      MaxLength="64" InvalidValueBehavior="AllowLeaveEditor"
                      FlowDirection="LeftToRight" pol_ap:ApUIElement.EnKeyboardLayout=""/>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="نوع تگ :" />
        <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="1" Margin="3" ItemsSource="{Binding TagTypeList}" 
                SelectedIndex="{Binding TagTypeIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                IsTextEditable="False" AutoComplete="True" 
                ImmediatePopup="True" Name="firstFocused" AllowSpinOnMouseWheel="False">
        </dxe:ComboBoxEdit>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="فیلد :" />

        <dxe:ButtonEdit Grid.Row="2" Grid.Column="1" Margin="3" IsEnabled="{Binding CanSelectModule}"
                          IsTextEditable="False" 
                          EditValue="{Binding SelectedModule}"
                          AllowDefaultButton="False"
                        >
            <dxe:ButtonEdit.Buttons>
                <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding CommandSelectModule}" ToolTip="انتخاب فیلد"/>
            </dxe:ButtonEdit.Buttons>
        </dxe:ButtonEdit>
                        
                          <!--ApplyItemTemplateToSelectedItem="True" 
                          ItemsSource="{Binding ModuleList}" 
                          SelectedItem="{Binding SelectedModule,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                          >-->
            <!--<dxe:ComboBoxEdit.Buttons>
                <dxe:ButtonInfo GlyphKind="Redo" ToolTip="بازخوانی اطلاعات" Command="{Binding CommandReloadProfileColorList}"/>
            </dxe:ComboBoxEdit.Buttons>-->

            <!--<dxe:ComboBoxEdit.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="{Binding Item3}">
                        <Image Source="{Binding Item2}" Stretch="None"/>
                        <TextBlock Margin="3" Text="{Binding Item1.Title}" />
                    </StackPanel>
                </DataTemplate>
            </dxe:ComboBoxEdit.ItemTemplate>-->
        <!--</dxe:ComboBoxEdit>-->





        <StackPanel Grid.Row="1000" Grid.ColumnSpan="1000" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Margin="0" Padding="6,3" MinWidth="80" IsDefault="True"
                    Command="{Binding CommandOK}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageOK16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="تایید"/>
                </StackPanel>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
                    Command="{Binding CommandCancel}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageCancel16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>

