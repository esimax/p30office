<dx:DXWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    
    xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
    xmlns:pol_hs="clr-namespace:POL.WPF.DXControls.POLHeaderedSeparator;assembly=POL.WPF.DXControls"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:pol_wpf="clr-namespace:POL.WPF.DXControls.POLDateEdit;assembly=POL.WPF.DXControls"
    xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
    xmlns:conv="clr-namespace:POC.Module.Email.Conv"
    x:Class="POC.Module.Email.Views.WEmailSend"
    Width="600" Height="580" 
    Title="{Binding WindowTitle}"
    Icon="{DynamicResource ApplicationIcon}"
    
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    
    FontFamily="{DynamicResource ApplicationFontFamily}" 
    FontSize="{DynamicResource ApplicationFontSize}"
    >

    
    <Grid pol_ap:ApGrid.RowDefinitions="*,auto" 
		pol_ap:ApGrid.ColumnDefinitions="*" Margin="9" 
		FlowDirection="{DynamicResource ApplicationFlowDirection}">


        <dx:DXTabControl Margin="3" x:Name="tcMain" SelectedIndex="{Binding TabSelectedIndex}">
            <dx:DXTabItem Header="اطلاعات ارسال">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid pol_ap:ApGrid.ColumnDefinitions="auto,*,*" pol_ap:ApGrid.RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto">

                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="از :"/>
                        <!--<TextBlock Grid.Row="0" Grid.Column="1" Margin="3" Text="{Binding DynamicFrom.Title}" />-->
                        <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="1" Margin="3" AllowSpinOnMouseWheel="False"
							IsTextEditable="False"
							ItemsSource="{Binding EmailAppList}" SelectedItem="{Binding SelectedEmailApp}"/>


                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="موضوع :"/>
                        <dxe:TextEdit Grid.Row="1" Grid.Column="1" Margin="3" EditValue="{Binding EmailSubject}" MaxLength="74" x:Name="firstFocused"/>

                        <pol_hs:POLHeaderedSeparator Grid.Row="2" Grid.ColumnSpan="3" Header="ارسال به"/>

                        <RadioButton Grid.Row="3" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="آدرس :" IsChecked="{Binding SendToEmailAdresses}"/>
                        <dxe:TextEdit Grid.Row="3" Grid.Column="1" Margin="3" EditValue="{Binding EmailAddresses}" 
							IsEnabled="{Binding SendToEmailAdresses}" MaxLength="256"
							pol_ap:ApUIElement.EnKeyboardLayout="" FlowDirection="LeftToRight"/>

                        <RadioButton Grid.Row="4" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="پرونده :" IsChecked="{Binding SendToContact}"/>
                        <dxe:ButtonEdit Grid.Row="4" Grid.Column="1" Margin="3" EditValue="{Binding SelectedContact}" 
							AllowDefaultButton="False" IsEnabled="{Binding SendToContact}"
							IsTextEditable="False">
                            <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding CommandSelectContact}" ToolTip="انتخاب پرونده"/>
                        </dxe:ButtonEdit>

                        <RadioButton Grid.Row="5" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="دسته :" IsChecked="{Binding SendToCategory}"/>
                        <dxe:ComboBoxEdit Grid.Row="5" Grid.Column="1" Margin="3" AllowSpinOnMouseWheel="False"
							IsEnabled="{Binding SendToCategory}" IsTextEditable="False"
							ItemsSource="{Binding CategoryList}" SelectedItem="{Binding SelectedCategory}"/>

                        <RadioButton Grid.Row="6" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="سبد انتخاب :" IsChecked="{Binding SendToBasket}"/>
                        <dxe:ComboBoxEdit Grid.Row="6" Grid.Column="1" Margin="3" AllowSpinOnMouseWheel="False"
							IsEnabled="{Binding SendToBasket}" IsTextEditable="False"
							ItemsSource="{Binding BasketList}" SelectedItem="{Binding SelectedBasket}"/>

                        <RadioButton Grid.Row="7" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="فایل" IsChecked="{Binding SendToFile}"/>
                        <dxe:ButtonEdit Grid.Row="7" Grid.Column="1" Margin="3" EditValue="{Binding SelectedFile}" 
							AllowDefaultButton="False" IsEnabled="{Binding SendToFile}"
							IsTextEditable="False"
							FlowDirection="LeftToRight">
                            <dxe:ButtonInfo GlyphKind="Regular" Command="{Binding CommandSelectFile}" ToolTip="انتخاب فایل"/>
                        </dxe:ButtonEdit>

                        <RadioButton Grid.Row="8" Grid.Column="0" Margin="3" VerticalAlignment="Center" Content="همه پرونده ها" IsChecked="{Binding SendToAll}"/>



                        <pol_hs:POLHeaderedSeparator Grid.Row="9" Grid.ColumnSpan="3" Header="فیلتر"/>

                        <dxe:CheckEdit Grid.Row="10" Margin="3" Content="عنوان : " IsChecked="{Binding FilterByEmailTitle}" IsEnabled="{Binding FilterEnabled}"/>
                        <dxe:ComboBoxEdit Grid.Row="10" Grid.Column="1" Margin="3" IsTextEditable="False" IsEnabled="{Binding FilterByEmailTitle}"
							ItemsSource="{Binding EmailTitleList}" SelectedItem="{Binding SelectedEmailTitle}" AllowSpinOnMouseWheel="False"/>

                        <pol_hs:POLHeaderedSeparator Grid.Row="11" Grid.ColumnSpan="3" Header="تنظیمات"/>

                        <TextBlock Grid.Row="12" Margin="3" Text="اولویت :" VerticalAlignment="Center"/>
                        <dxe:ComboBoxEdit Grid.Row="12" Grid.Column="1" IsTextEditable="False" Margin="3"
							ItemsSource="{Binding PriorityList}" SelectedIndex="{Binding SelectedPriority}" AllowSpinOnMouseWheel="False"/>

                        <TextBlock Margin="3" Grid.Row="13" Grid.Column="0" Text="تاریخ ارسال :" VerticalAlignment="Center"/>
                        <pol_wpf:POLDateEdit Margin="3" Grid.Row="13" Grid.Column="1" DateEditValue="{Binding SendDate, Mode=TwoWay}"/>

                        <TextBlock Margin="3" Grid.Row="14" Grid.Column="0" Text="ساعت شروع ارسال :"/>
                        <dxe:TextEdit Margin="3" Grid.Row="14" Grid.Column="1" FlowDirection = "LeftToRight"
							Mask = "([01]?[0-9]|2[0-3]):[0-5]\d" MaskType = "RegEx" MaskUseAsDisplayFormat = "True"
							EditValue="{Binding SendTime, Mode=TwoWay}"/>


                        <TextBlock Grid.Row="15" Margin="3" Text="تعداد ارسالی :" VerticalAlignment="Center"/>
                        <Button Grid.Row="15" Grid.Column="1" Margin="3" Padding="2" ToolTip="محاسبه تعداد ارسالی ..." Command="{Binding CommandCalculateSendCount}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_refresh.png"/>
                                <TextBlock Margin="6,0" Text="{Binding SendCount}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </ScrollViewer>
            </dx:DXTabItem>

            <dx:DXTabItem Header="ضمائم">
                <Grid pol_ap:ApGrid.ColumnDefinitions="*" pol_ap:ApGrid.RowDefinitions="auto,*,auto,auto,auto,*">
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button  Padding="2" Margin="3" Command="{Binding CommandAttacheFileAdd}" ToolTip="ضمیمه كردن فایل">
                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Add.png"/>
                        </Button>
                        <Button  Padding="2" Margin="3" Command="{Binding CommandAttacheFileDelete}" ToolTip="حذف ضمیمه">
                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Delete2.png"/>
                        </Button>
                        <TextBlock Margin="3" VerticalAlignment="Center" Text="انتخاب از فایل :"/>
                    </StackPanel>

                    <ListBox Grid.Row="1" Margin="3" ItemsSource="{Binding AttachedFileList}" 
						SelectedItem="{Binding AttachedFileSelected}"
						FlowDirection="LeftToRight" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!--<Button Margin="3" Command="{Binding CommandAttachmentRemove}" CommandParameter="{Binding Oid}" Padding="2">
                                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Delete2.png"/>
                                        </Button>-->
                                    <TextBlock Text="{Binding FileSize}" Margin="3" VerticalAlignment="Center" MinWidth="75" />
                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" Margin="3" VerticalAlignment="Center" />

                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!--<StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Margin="3" Text="تعداد ضمائم : "/>
                        <TextBlock Margin="3" Text="{Binding AttachmentCount}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <TextBlock Margin="3" Text="حجم ضمائم : "/>
                        <TextBlock Margin="3" Text="{Binding AttachmentSize}"/>
                    </StackPanel>-->

                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <Button  Padding="2" Margin="3" Command="{Binding CommandAttacheFieldAdd}" ToolTip="ضمیمه كردن فیلد">
                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Add.png"/>
                        </Button>
                        <Button  Padding="2" Margin="3" Command="{Binding CommandAttacheFieldDelete}" ToolTip="حذف ضمیمه">
                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Delete2.png"/>
                        </Button>
                        <TextBlock Margin="3" VerticalAlignment="Center" Text="انتخاب از فیلد های پرونده :"/>
                    </StackPanel>

                    <ListBox Grid.Row="5" Margin="3" ItemsSource="{Binding AttachedFieldList}" 
						HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch"
						SelectedItem="{Binding AttachedFieldSelected}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!--<Button Margin="3" Command="{Binding CommandAttachmentRemove}" CommandParameter="{Binding Oid}" Padding="2">
                                        <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Delete2.png"/>
                                    </Button>-->
                                    <TextBlock Text="{Binding FullPathString}" Margin="3" VerticalAlignment="Center" MinWidth="75" />
                                    <!--<TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" Margin="3" VerticalAlignment="Center" />-->
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </dx:DXTabItem>

            <dx:DXTabItem Header="بدنه (قالب)">
                <Grid pol_ap:ApGrid.RowDefinitions="auto,auto,*" pol_ap:ApGrid.ColumnDefinitions="auto,*,auto,auto,auto">
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="قالب :"/>
                    <dxe:ComboBoxEdit Grid.Row="0" Grid.Column="1" Margin="3" IsTextEditable="False" FocusPopupOnOpen="True" AutoComplete="True"
						ItemsSource="{Binding TemplateList}" SelectedItem="{Binding SelectedTemplate}" AllowSpinOnMouseWheel="False"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                        <Button  Padding="2" Margin="3" Command="{Binding CommandTemplateAdd}" ToolTip="قالب جدید">
                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Add.png"/>
                        </Button>
                        <Button Padding="2" Margin="3" Command="{Binding CommandTemplateEdit}" ToolTip="ویرایش قالب">
                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_EditBlue.png"/>
                        </Button>
                        <Button Padding="2" Margin="3" Command="{Binding CommandTemplateDelete}" ToolTip="حذف قالب">
                            <Image Width="16" Height="16" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Delete2.png"/>
                        </Button>

                        <Button Padding="2" Margin="3" Command="{Binding CommandTemplateExport}" ToolTip="استخراج">
                            <Image Width="16" Height="16" Stretch="Fill" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_export.png" />
                        </Button>
                        <Button Padding="2" Margin="3" Command="{Binding CommandTemplateImport}" ToolTip="واردات">
                            <Image Width="16" Height="16" Stretch="Fill" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_import.png" />
                        </Button>
                    </StackPanel>


                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" VerticalAlignment="Center" Text="اطلاعات متغییرها :"/>
                    <dxlc:FlowLayoutControl Margin="0"
						Grid.Row="2"
						Grid.ColumnSpan="5"
						AllowItemMoving="False" x:Name="flcMain"
						AllowAddFlowBreaksDuringItemMoving="False" 
						AllowLayerSizing="False" 
						AnimateItemMoving="False"
						Orientation="Vertical" 
						BreakFlowToFit="False" 
						StretchContent="True" 
						AllowMaximizedElementMoving="False" 
						MaximizedElementPosition="Right"
						ScrollBars="Auto"
						ItemsSource="{Binding ParamList}"            
                                >
                        <dxlc:FlowLayoutControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="3,6" VerticalAlignment="Top" Text="{Binding TagTitle}" Width="100"/>
                                    <dxe:TextEdit 
										EditValue="{Binding Data, Mode=TwoWay}" 
										VerticalContentAlignment="Top"
										ScrollViewer.CanContentScroll="{Binding IsMultiLine}"
										AcceptsReturn="{Binding IsMultiLine}" 
										AcceptsTab="{Binding IsMultiLine}"
										HorizontalScrollBarVisibility="{Binding HasScrollBar}" 
										VerticalScrollBarVisibility="{Binding HasScrollBar}"
										Height="{Binding Height}" 
										Width="400"            
                                      />
                                </StackPanel>
                            </DataTemplate>
                        </dxlc:FlowLayoutControl.ItemTemplate>
                    </dxlc:FlowLayoutControl>
                </Grid>
            </dx:DXTabItem>

            <dx:DXTabItem Header="بدنه (ساده)">
                
                <Grid pol_ap:ApGrid.RowDefinitions="*" pol_ap:ApGrid.ColumnDefinitions="*">
                    <RichTextBox  AcceptsTab="True" AcceptsReturn="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"
                          Name="rtbSimpleBody"
                                  
                                        />
                </Grid>
            </dx:DXTabItem>

            <dx:DXTabItem Header="پیش نمایش">
                <WebBrowser Margin="3" Grid.Row="1" Grid.ColumnSpan="5" x:Name="wbTemplate" pol_ap:ApWebBrowser.Html="{Binding PreviewData}" />
                <!--pol_ap:ApWebBrowser.BindableSource="{Binding PreviewData}"-->
            </dx:DXTabItem>
            
        </dx:DXTabControl>



        <StackPanel Grid.Row="1000" Grid.ColumnSpan="1000" Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
            <Button Margin="0" Padding="6,3" MinWidth="80" IsDefault="True"
				Command="{Binding CommandSend}">
                <TextBlock Margin="3" VerticalAlignment="Center" Text="ارسال"/>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" IsCancel="True"
				Command="{Binding CommandCancel}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageCancel16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="لغو"/>
                </StackPanel>
            </Button>
            <Button Margin="12,0,0,0" Padding="6,3" MinWidth="80" 
				Command="{Binding CommandHelp}">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{DynamicResource ImageHelp16}" />
                    <TextBlock Margin="3" VerticalAlignment="Center" Text="راهنما"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</dx:DXWindow>
