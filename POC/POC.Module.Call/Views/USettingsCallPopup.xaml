<UserControl x:Class="POC.Module.Call.Views.USettingsCallPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
             xmlns:pol_hs="clr-namespace:POL.WPF.DXControls.POLHeaderedSeparator;assembly=POL.WPF.DXControls"
             mc:Ignorable="d" 
             d:DesignHeight="1100" d:DesignWidth="300">
    
    
    <dxlc:GroupBox Margin="3">
        <dxlc:GroupBox.Header>
            <StackPanel Orientation="Horizontal">
                <Image Style="{DynamicResource ImageAny16}" Source="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Phone2.png"/>
                <TextBlock Style="{DynamicResource TextBlockNormal}" Text="پاپ آپ تماس " />
            </StackPanel>
        </dxlc:GroupBox.Header>
        <StackPanel>
            <Grid Visibility="{Binding IsNotAuthorizedVis}">
                <TextBlock Text="جهت تنظیم وارد شوید" Margin="12" HorizontalAlignment="Center"/>
            </Grid>
            <StackPanel Visibility="{Binding IsAuthorizedVis}">
                <dxe:CheckEdit Name="ceHorizontalAlignmentOnLeft" Margin="3" Content="نمایش سمت چپ" IsChecked="{Binding HorizontalAlignmentOnLeft}"/>
                <TextBlock Margin="3" Text="مدت نمایش پاپ آپ :" />
                <dxe:ComboBoxEdit Margin="3" SelectedIndex="{Binding SelectedDurationIndex}" IsTextEditable="False"
                                  AllowSpinOnMouseWheel="False">
                    <dxe:ComboBoxEditItem Content="نمایش داده نشود"/>
                    <dxe:ComboBoxEditItem Content="10 ثانیه"/>
                    <dxe:ComboBoxEditItem Content="20 ثانیه"/>
                    <dxe:ComboBoxEditItem Content="30 ثانیه"/>
                    <dxe:ComboBoxEditItem Content="1 دقیقه"/>
                    <dxe:ComboBoxEditItem Content="5 دقیقه"/>
                    <dxe:ComboBoxEditItem Content="نامحدود"/>
                </dxe:ComboBoxEdit>

                <TextBlock Margin="3" Text="اندازه پاپ آپ :" />
                <dxe:ComboBoxEdit Margin="3" SelectedIndex="{Binding SelectedSizeIndex}" IsTextEditable="False"
                                  AllowSpinOnMouseWheel="False">
                    <dxe:ComboBoxEditItem Content="120"/>
                    <dxe:ComboBoxEditItem Content="150"/>
                    <dxe:ComboBoxEditItem Content="180"/>
                    <dxe:ComboBoxEditItem Content="210"/>
                    <dxe:ComboBoxEditItem Content="240"/>
                    <dxe:ComboBoxEditItem Content="اتوماتیك"/>
                </dxe:ComboBoxEdit>

                <TextBlock Margin="3" Text="تعیین نوار رنگ :" />
                <RadioButton Name="rbColorFixed" Margin="19,3,3,3" Content="رنگ ثابت" GroupName="color" IsChecked="{Binding ColorIsFixed}"/>
                <dxe:PopupColorEdit Margin="35,3,3,3"  
                                    EditValue="{Binding ColorFixed,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"                
                                    IsEnabled="{Binding IsChecked,ElementName=rbColorFixed}" ShowMoreColorsButton="False"/>
                <RadioButton Name="rbColorProfile" Margin="19,3,3,3" Content="از فرم" GroupName="color" IsChecked="{Binding ColorIsProfile}"/>
                <dxe:ComboBoxEdit Margin="35,3,3,3" IsEnabled="{Binding IsChecked,ElementName=rbColorProfile}" AllowSpinOnMouseWheel="False"
                                                    IsTextEditable="False" 
                                                    ApplyItemTemplateToSelectedItem="True" 
                                                    ItemsSource="{Binding ProfileColorList}" 
                                                    SelectedItem="{Binding ProfileColorSelected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                    >
                    <dxe:ComboBoxEdit.Buttons>
                        <dxe:ButtonInfo GlyphKind="Redo" ToolTip="بازخوانی اطلاعات" Command="{Binding CommandReloadProfileColorList}"/>
                    </dxe:ComboBoxEdit.Buttons>

                    <dxe:ComboBoxEdit.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="{Binding Item3}">
                                <Image Source="{Binding Item2}" Stretch="None"/>
                                <TextBlock Margin="3" Text="{Binding Item1.Title}" />
                            </StackPanel>
                        </DataTemplate>
                    </dxe:ComboBoxEdit.ItemTemplate>
                </dxe:ComboBoxEdit>

                <dxe:CheckEdit Name="ceImage" Margin="3" Content="نمایش عكس :" IsChecked="{Binding ImageIsActive}"/>
                <TextBlock Margin="19,3,3,3" Text="از فرم" IsEnabled="{Binding IsChecked,ElementName=ceImage}"/>
                <dxe:ComboBoxEdit Margin="35,3,3,3" IsEnabled="{Binding IsChecked,ElementName=ceImage}"
                                                    IsTextEditable="False" AllowSpinOnMouseWheel="False"
                                                    ApplyItemTemplateToSelectedItem="True" 
                                                    ItemsSource="{Binding ProfileImageList}" 
                                                    SelectedItem="{Binding ProfileImageSelected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                    >
                    <dxe:ComboBoxEdit.Buttons>
                        <dxe:ButtonInfo GlyphKind="Redo" ToolTip="بازخوانی اطلاعات" Command="{Binding CommandReloadProfileImageList}"/>
                    </dxe:ComboBoxEdit.Buttons>

                    <dxe:ComboBoxEdit.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="{Binding Item3}">
                                <Image Source="{Binding Item2}" Stretch="None"/>
                                <TextBlock Margin="3" Text="{Binding Item1.Title}" />
                            </StackPanel>
                        </DataTemplate>
                    </dxe:ComboBoxEdit.ItemTemplate>
                </dxe:ComboBoxEdit>

                <dxe:CheckEdit Name="ceSound" Margin="3" Content="پخش صدا :" IsChecked="{Binding SoundIsActive}"/>
                <RadioButton Margin="19,3,3,3" Content="از فهرست موجود" GroupName="sound" IsEnabled="False" IsChecked="True"/>
                <dxe:ComboBoxEdit Margin="35,3,3,3" AllowSpinOnMouseWheel="False"
                                  IsEnabled="{Binding IsChecked,ElementName=ceSound}" 
                                  IsTextEditable="False"
                                  FlowDirection="LeftToRight"
                                  SelectedItem="{Binding SoundTrackSelected}"
                                  ItemsSource="{Binding SoundTrackList}"
                                  >
                    <dxe:ComboBoxEdit.Buttons>
                        <dxe:ButtonInfo GlyphKind="Right" Command="{Binding CommandSoundTrackPlay}"/>
                    </dxe:ComboBoxEdit.Buttons>
                    <!--<dxe:ComboBoxEditItem Content="Track 01"/>
                    <dxe:ComboBoxEditItem Content="Track 02"/>
                    <dxe:ComboBoxEditItem Content="Track 03"/>
                    <dxe:ComboBoxEditItem Content="Track 04"/>
                    <dxe:ComboBoxEditItem Content="Track 05"/>-->
                </dxe:ComboBoxEdit>
                <RadioButton Margin="19,3,3,3" Content="از فرم" GroupName="sound" IsEnabled="False"/>
                <dxe:ComboBoxEdit Margin="35,3,3,3" IsEnabled="False" AllowSpinOnMouseWheel="False"/>

                <dxe:CheckEdit Margin="3" Content="نمایش اطلاعات تماس امروز" IsChecked="{Binding ShowTodayCallStat}"/>
                <dxe:CheckEdit Margin="3" Content="نمایش اطلاعات تماس سوابق" IsChecked="{Binding ShowOldCallStat}"/>
                <dxe:CheckEdit Margin="3" Content="نمایش ثبت كننده پرونده" IsChecked="{Binding ShowContactCreator}"/>
                <dxe:CheckEdit Margin="3" Content="نمایش تاریخ ثبت پرونده" IsChecked="{Binding ShowContactCreatedDate}"/>
                <dxe:CheckEdit Margin="3" Content="نمایش ویراستار پرونده" IsChecked="{Binding ShowContactEditor}"/>
                <dxe:CheckEdit Margin="3" Content="نمایش تاریخ ویرایش پرونده" IsChecked="{Binding ShowContactEditedDate}"/>
                <dxe:CheckEdit Margin="3" Content="نمایش آخرین نكته" IsChecked="{Binding ShowLastNote}" IsEnabled="False"/>
                <dxe:CheckEdit Margin="3" Content="امكان ثبت نكته" IsChecked="{Binding AllowAddNote}"/>
                <!--<dxe:CheckEdit Margin="3" Content="فقط داخلی مربوطه" IsChecked="{Binding OnlyInternalCalls}"/>-->
                <!--<dxe:TextEdit Margin="3" EditValue="{Binding InternalCode}" MaxLength="64"/>-->
                <dxe:CheckEdit Margin="3" Content="امكان ثبت كارتابل" IsChecked="{Binding AllowCardTable}"/>

                <pol_hs:POLHeaderedSeparator Header="خروجی ها" Margin="0 6"/>
                <dxe:CheckEdit Margin="3" Content="خروجی به فایلهای پاپ" IsChecked="{Binding ExportAsPopFile}"/>
                <pol_hs:POLHeaderedSeparator Header="ستون های اختیاری" Margin="0 6"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable1}" Content="{Binding CCText1}" IsChecked="{Binding CCSelected1}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable2}" Content="{Binding CCText2}" IsChecked="{Binding CCSelected2}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable3}" Content="{Binding CCText3}" IsChecked="{Binding CCSelected3}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable4}" Content="{Binding CCText4}" IsChecked="{Binding CCSelected4}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable5}" Content="{Binding CCText5}" IsChecked="{Binding CCSelected5}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable6}" Content="{Binding CCText6}" IsChecked="{Binding CCSelected6}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable7}" Content="{Binding CCText7}" IsChecked="{Binding CCSelected7}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable8}" Content="{Binding CCText8}" IsChecked="{Binding CCSelected8}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable9}" Content="{Binding CCText9}" IsChecked="{Binding CCSelected9}"/>
                <dxe:CheckEdit Margin="3" IsEnabled="{Binding CCEnable0}" Content="{Binding CCText0}" IsChecked="{Binding CCSelected0}"/>
                
            </StackPanel>
        </StackPanel>
        
    </dxlc:GroupBox>
</UserControl>
