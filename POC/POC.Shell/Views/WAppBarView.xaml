<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="POC.Shell.Views.WAppBarView"
        Title="WAppBarView" Height="300" Width="300"
        FontFamily="{DynamicResource ApplicationFontFamily}"
        FontSize="{DynamicResource ApplicationFontSize}"
        >

    <Grid pol_ap:ApGrid.RowDefinitions="auto,*,auto" pol_ap:ApGrid.ColumnDefinitions="5,*,29" x:Name="TheG">
        <Canvas Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="Orange" IsHitTestVisible="False" />

        <Image Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource ImageAny16}" Source="pack://application:,,,/POL.Lib.Resources;component/Special/16/_16_dockRight.png" Width="16" HorizontalAlignment="Left" x:Name="imgDock"/>
        <Image Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource ImageAny16}" Source="pack://application:,,,/POL.Lib.Resources;component/Special/16/_16_quit.png" Width="16" HorizontalAlignment="Right" x:Name="imgExit"/>
        <TextBlock  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="3" Text="بسم الله الرحمن الرحیم" VerticalAlignment="Center" HorizontalAlignment="Center" />

        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right"  x:Name="spButtons" >
            <!--<Button Content="تنظیمات" FontFamily="Tahoma"  Width="75" SnapsToDevicePixels="True" Margin="3">
                <Button.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="90"/>
                </Button.LayoutTransform>
            </Button>
            <Button Content="كاربران" FontFamily="Tahoma"  Width="75" SnapsToDevicePixels="True" Margin="3">
                <Button.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="90"/>
                </Button.LayoutTransform>
            </Button>
            <Button Content="تقویم" FontFamily="Tahoma" Width="75" SnapsToDevicePixels="True" Margin="3">
                <Button.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="90"/>
                </Button.LayoutTransform>
            </Button>-->
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1" x:Name="TheGrid">


            <Border Background="White" Panel.ZIndex="500"/>


        </Grid>

        <!--FlowDirection="{DynamicResource ApplicationFlowDirection}"-->

        <Border Grid.Row="2" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1" >
            <Grid Margin="6" FlowDirection="RightToLeft"
              pol_ap:ApGrid.RowDefinitions="auto,auto,auto,auto"
              pol_ap:ApGrid.ColumnDefinitions="auto,*">
                <Border Grid.Column="0" Grid.RowSpan="4" BorderBrush="Gray" BorderThickness="1" Padding="5" VerticalAlignment="Center">
                    <Image Width="64" Height="64" Source="/POC.Shell;component/Images/_64_P30OfficeBG.png" Name="imgLogo" />
                </Border>

                <TextBlock Grid.Row="0" Grid.Column="1" Margin="3" FlowDirection="LeftToRight">
                    <Hyperlink  RequestNavigate="Hyperlink_RequestNavigate" Name="hlSite1">
                         www.p30office.com
                    </Hyperlink>
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Margin="3"  FlowDirection="LeftToRight" Name="tbEmail"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Margin="3" FlowDirection="LeftToRight" >
                    <Hyperlink  RequestNavigate="Hyperlink2_RequestNavigate" Name="hlSite2" >
                        ارسال تیکت پشتیبانی
                    </Hyperlink>
                </TextBlock>

                <!--<TextBlock Grid.Row="2" Grid.Column="1" Margin="3" Text="(+98) 21 22651880" FlowDirection="LeftToRight" Name="tbPhone"/>-->
                <TextBlock Grid.Row="3" Grid.Column="1" Margin="3" Name="txVersion" FlowDirection="LeftToRight"/>
            </Grid>
        </Border>



    </Grid>

</Window>
