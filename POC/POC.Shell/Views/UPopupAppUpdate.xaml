<UserControl x:Class="POC.Shell.Views.UPopupAppUpdate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pol_ap="clr-namespace:POL.WPF.Controles.AttachProperties;assembly=POL.WPF.Controles"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             FlowDirection="RightToLeft" FontFamily="Tahoma" FontSize="14"
             >
    <Grid pol_ap:ApGrid.RowDefinitions="auto,*" pol_ap:ApGrid.ColumnDefinitions="auto,*" >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFFEABE" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <dxe:ImageEdit Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" 
                                   Margin="3" Width="80" Height="80" Stretch="None" 
                                   
                                   VerticalAlignment="Top" IsReadOnly="True" ShowErrorToolTip="False"
                       Name="img"/>
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="9" >
            <TextBlock Margin="6" Text="آپدیت جدید برای نسخه :"/>
            <TextBlock Margin="6" >
                    <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" Name="hlVersion" >
                        <!--<Run Text="{Binding Version}" />-->
                         <!--<TextBlock Text="{Binding Version}"/>-->
                    </Hyperlink>
            </TextBlock>
        </StackPanel>
        <!--EditValue="/POC.Shell;component/Images/_64_P30OfficeBG.png"-->
        <!--<Image  Source="/POC.Shell;component/Images/_64_P30OfficeBG.png" Stretch="None" />-->
    </Grid>
</UserControl>
