<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">




    <Style TargetType="{x:Type Image}" x:Key="ImageAny16">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FlowDirection" Value="LeftToRight"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Unspecified"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
    </Style>

    <Style TargetType="{x:Type Image}" x:Key="ImageAny32">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FlowDirection" Value="LeftToRight"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Unspecified"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
    </Style>


    <Style TargetType="{x:Type Image}" x:Key="ImageHint" BasedOn="{StaticResource ImageAny16}">
        <Setter Property="Source" Value="pack://application:,,,/POL.Lib.Resources;component/Special/16/_16_InformationBalloon.png"/>
    </Style>

    <Style  x:Key="ImageOK16" TargetType="{x:Type Image}" BasedOn="{StaticResource ImageAny16}">
        <Setter Property="Source" Value="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_OK.png"/>
    </Style>

    <Style x:Key="ImageCancel16" TargetType="{x:Type Image}" BasedOn="{StaticResource ImageAny16}" >
        <Setter Property="Source" Value="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Close.png"/>
    </Style>

    <Style x:Key="ImageSave16" TargetType="{x:Type Image}" BasedOn="{StaticResource ImageAny16}" >
        <Setter Property="Source" Value="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Save.png"/>
    </Style>

    <Style x:Key="ImageHelp16" TargetType="{x:Type Image}" BasedOn="{StaticResource ImageAny16}" >
        <Setter Property="Source" Value="pack://application:,,,/POL.Lib.Resources;component/Standard/16/_16_Help.png"/>
    </Style>

    



</ResourceDictionary>