<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="filePos" xsi:type="File" fileName="${basedir}/LogPos/${shortdate}.log" deleteOldFileOnStartup="false" encoding="utf-16" layout="${message}" />
    <target name="filePox" xsi:type="File" fileName="${basedir}/LogPox/${shortdate}.log" deleteOldFileOnStartup="false" encoding="utf-16" layout="${message}" />
    <target name="filePoc" xsi:type="File" fileName="${basedir}/LogPoc/${shortdate}.log" deleteOldFileOnStartup="false" encoding="utf-16" layout="${message}" />
    
    <target name="console" xsi:type="ColoredConsole" layout="${message}" />
    <target name="network" xsi:type="Network" address="tcp://127.0.0.1:4004" layout="${message}"  newLine="true" lineEnding="CR" />
  </targets>

  <rules>
    <!--<logger name="*" minlevel="Debug" writeTo="file" />-->
    <logger name="*" minlevel="Debug" writeTo="console" />
  </rules>
</nlog>