            </dxr:RibbonControl>

            <ContentControl Grid.Row="1" Margin="6"  x:Name="moduleContent" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" />

            <!--<dx:WaitIndicator DeferedVisibility="False" Grid.RowSpan="20" Name="wiMain" IsHitTestVisible="False" Visibility="Collapsed" />-->
        </Grid>
    </dxb:BarManager>


</dxr:DXRibbonWindow>
